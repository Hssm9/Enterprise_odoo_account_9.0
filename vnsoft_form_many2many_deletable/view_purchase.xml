<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="many2many_deletable_purchase_order_line_view_form" model="ir.ui.view">
            <field name="name">many2many.deletable.purchase.order.line.view.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                        <field name="deletable" attrs="{'invisible':1}"/>
                    </xpath>
                </data>
            </field>
        </record>


    </data>
</openerp>