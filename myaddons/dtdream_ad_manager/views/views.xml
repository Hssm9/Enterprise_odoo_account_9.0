        <record id='dtdream_group_apply_form' model='ir.ui.view'>
            <field name='name'>view.dtdream.group.apply.form</field>
            <field name='type'>form</field>
            <field name='model'>dtdream.group.apply</field>
            <field eval="1" name="priority"/>
            <field name='arch' type='xml'>
                <form  string='域群组申请详情' >
                    <header class='no_hidden'>
                        <button name="btn_confirm" type="workflow" string='提交' groups="dtdream_ad_manager.group_ad_apply"
                                 attrs="{'invisible':[('state','not in',['draft','refuse'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,accept,implement"
                               statusbar_colors='{"draft":"blue","confirm":"blue","accept":"blue","implement":"blue"}'/>
                    </header>
                    <sheet>
                        <group string='群组信息'>
                            <group name='group_left'>
                                <field name='apply'/>
                                <field name='department' options="{'no_quick_create':True,'no_create_edit':True, 'no_create': True}" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                                <field name='expire_time' invisible="1" />
                                <field name="is_approver" invisible="1"/>
                            </group>
                            <group name='group_right'>
                                <field name='time' />
                                <field name="approver" options="{'no_quick_create':True,'no_create_edit':True, 'no_create': True}" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                            </group>
                        </group>
                        <group>
                            <field name='description' attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                        </group>
                        <group>
                            <group name='group_left'>
                                <field name='label' attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name='name1' />
                                <field name='name2' placeholder="若系统默认名称不合理,请输入建议域群组名称" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </group>
                            <group name='group_right'>
                                <field name='ext' options="{'no_quick_create':True,'no_create_edit':True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name='group' placeholder="若域群组是跨一级部门，请填写此项" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
                            </group>
                        </group>
                        <group string='成员信息'>
                            <group>
                                <field name='admins' widget='many2many_tags'  options="{'no_create_edit': True, 'no_quick_create': True, 'no_create': True}"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                            <field name='users' widget="many2many" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    options="{'no_create_edit': True, 'no_quick_create': True, 'no_create': True}">
                                <tree>
                                    <field name="full_name" />
                                    <field name="nick_name" />
                                    <field name="job_number" />
                                    <field name="department_id" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                          <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                          <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="act_btn_apply" model="ir.actions.act_window">
