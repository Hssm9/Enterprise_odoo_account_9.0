    <t t-name="content_notice">
        <div class="notice line hidden-xs">
            <div class="title">
                公告
            </div>
            <!--新闻列表 -->
            <div class="newsticker">
                <ul class="newsticker-list" >
                    <t t-foreach="notices" t-as="notice">
                        <li class="newsticker-item">
                            <a  t-att-href="notice.url" target="_blank"><t t-esc="notice.content"/> </a>
                        </li>
                    </t>
                </ul>
            </div>
            <!--新闻列表 -->
        </div>
    </t>

    <t t-name="content_event">
        <div class="event-table container-fluid">
            <div class="tb-row clearfix  row">
                <div class=" line tb-box-l  col-xs-12">
                    <div class="o_content_event_affairs"/>
                </div>
                <div class=" line tb-box-r col-xs-12">
                    <div class="o_content_event_applies"/>
                </div>
            </div>
        </div>
    </t>

    <t t-name="content_event_affairs">
        <h4>待我处理事项</h4>
        <div class="tb-p-10"><div class="tb-h">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>申请事项</th>
                                                <th>状态</th>
                                                <th>申请人</th>
                                                <th>申请时间</th>
                                                <th>操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="affairs" t-as="affair">
                                                <tr t-att-class="affair.affair_id">
                                                    <td><t t-esc="affair.name"/> </td>
                                                    <td>
                                                        <t t-if="affair.defer">
                                                            <span class="defer">停留<t t-esc="affair.deferdays"/>天 </span>
                                                        </t>
                                                        <t t-if="!affair.defer">
                                                            <span class="normal">正常</span>
                                                        </t>
                                                    </td>
                                                    <td><t t-esc="affair.user"/></td>
                                                    <td><t t-esc="affair.date"/></td>
                                                    <td><a t-att-href="affair.url">审批</a></td>

                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
        </div>
                                    <nav>
                                        <ul class="pager">
                                            <li class="previous disabled" type="affairs" t-att-value="affpreviousPage"><a href="javascript:void(0);">上一页</a></li>
                                            <span class="pagination-info">共<t t-esc="afftotalPage"/>页/第<t t-esc="affcurrentPage"/>页</span>
                                            <li class="next" type="affairs" t-att-value="affnextPage" ><a href="javascript:void(0);">下一页</a></li>
                                        </ul>
                                    </nav>
                                </div>
    </t>

    <t t-name="content_event_applies">
        <h4>我申请的事项</h4>
        <div class="tb-p-10"><div class="tb-h">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>申请事项</th>
                                            <th>状态</th>
                                            <th>当前责任人</th>
                                            <th>申请时间</th>
                                            <th>操作</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="applies" t-as="apply">
                                                <tr t-att-class="apply.apply_id">
                                                    <td><t t-esc="apply.name"/> </td>
                                                    <td>
                                                        <t t-if="apply.defer">
                                                            <span class="defer">停留<t t-esc="apply.deferdays"/>天</span>
                                                        </t>
                                                        <t t-if="!apply.defer">
                                                            <span class="normal">正常</span>
                                                        </t>
                                                    </td>
                                                    <td><t t-esc="apply.user"/></td>
                                                    <td><t t-esc="apply.date"/></td>
                                                    <td><a t-att-href="apply.url">查看</a></td>
                                                    <!--<td><a t-att-data-id="apply.id" href="#">查看</a></td>-->
                                                </tr>
                                            </t>
                                        </tbody>

                                    </table>
</div>
                                    <nav>
                                        <ul class="pager">
                                            <li class="previous" type="applies" t-att-value="previousPage"><a href="javascript:void(0);">上一页</a></li>
                                            <span class="pagination-info">共<t t-esc="totalPage"/>页/第<t t-esc="currentPage"/>页</span>
                                            <li class="next" type="applies" t-att-value="nextPage" ><a href="javascript:void(0);">下一页</a></li>
                                        </ul>
                                    </nav>

                                </div>
    </t>

    <t t-name="home">
        <div>
            <div class="o_main_header hidden-xs"/>
            <div class="dodo-container clearfix">
                <div class="o_main_sidebar"/>
                <div class="o_main_content"/>
            </div>
        </div>
    </t>

