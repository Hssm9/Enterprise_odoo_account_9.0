                <!--插入dodo日历-->
            <!--</div>-->
            <!--&lt;!&ndash;日历 &ndash;&gt;-->

            <!--通讯录 -->
            <div class="address line">
                <div class="p10">
                    <h4>员工通讯录</h4>
                    <label>姓名</label>
                    <input class="form-control o_full_name" placeholder="请输入姓名"/>

                    <div class="blank10"/>
                    <label>花名</label>
                    <input class="form-control o_nick_name" placeholder="请输入花名"/>

                    <div class="blank10"/>
                    <label>工号</label>
                    <input class="form-control o_job_number" placeholder="请输入工号"/>

                    <div class="blank10"/>
                    <a class="btn submit o_user_search_btn">提交</a>

                    <div class="blank10"/>
