<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">
    <t t-name="header">
        <div class="o_header"/>
    </t>

    <t t-name="dtdream_user_menu">
        <li class="o_user_menu">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">
                <img class="img-circle oe_topbar_avatar" t-att-src="_s + '/web/static/src/img/user_menu_avatar.png'"/>
                <span class="oe_topbar_name"/> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
                <!--<li><a href="#" data-menu="documentation">Documentation</a></li>-->
                <!--<li><a href="#" data-menu="support">Support</a></li>-->
                <!--<li><a href="#" data-menu="about">About</a></li>-->
                <!--<li class="divider"/>-->
                <!--<li><a href="#" data-menu="settings">Preferences</a></li>-->
                <!--<li><a href="#" data-menu="account">My dodo.com account</a></li>-->
                <li><a href="#" data-menu="logout">注销</a></li>
            </ul>
        </li>
    </t>

    <t t-name="header_info">
        <div>
            <div class="dodo-header clearfix ">
                <div class="logo"><img src="/dtdream_home/static/img/logo@2x.png"/></div>
                <div class="item-bar clearfix">
                    <ul>
                        <li class="user-menu">
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </t>

    <t t-name="sidebar">
        <div class="o_sidebar"/>
    </t>

    <t t-name="sidebar_info">
        <div class="sidebar">
            <ul>
                <li class="active"><i class="dodo doicon-dashboard"/>Dashboard</li>
                <t t-foreach="model_sets" t-as="model">
                    <!--<a t-att-href="model.url"  t-att-model="model.model" t-att-type="model.view_type" t-att-action-id="model.action" t-att-menu-id="model.menu">-->
                    <a t-att-href="model.url">
                        <li>
                            <i t-att-class="model.class"/>
                            <t t-esc="model.name"/>
                        </li>
                    </a>
                </t>
            </ul>
        </div>
    </t>

    <t t-name="content">
        <div class="content clearfix">
            <div class="o_related"/>
            <div class="o_content"/>
            <div class="o_footer">
                <div class="footer">
                版权所有 © 杭州数梦工场科技有限公司 2015-2016。 保留一切权利。
                </div>
            </div>
        </div>
    </t>

    <t t-name="related">
        <div class="o_related_info"/>
    </t>

    <t t-name="related_info">
        <div class="related">
            <!--<div class="blank30"></div>-->
            <!--&lt;!&ndash;日历 &ndash;&gt;-->
            <!--<div class="alendar line">-->
                <!--插入dodo日历-->
            <!--</div>-->
            <!--&lt;!&ndash;日历 &ndash;&gt;-->
            <div class="blank30"/>
            <!--通讯录 -->
            <div class="address line">
                <div class="p10">
                    <h4>员工通讯录</h4>
                    <label>姓名</label>
                    <input class="form-control o_full_name" placeholder="请输入姓名全称"/>

                    <div class="blank10"/>
                    <label>工号</label>
                    <input class="form-control o_job_number" placeholder="请输入工号"/>

                    <div class="blank10"/>
                    <a class="btn submit o_user_search_btn">提交</a>

                    <div class="blank10"/>
                    <p class="notes">*输入任一条件即可查询</p>
                </div>
            </div>
            <!--通讯录 -->
            <div class="o_user_search"/>
        </div>
    </t>

    <t t-name="user_search">
        <t t-if="result == 0">
            <div class="blank30"/>
            <div class="info line">
                <div class="p10">
                    <p class="notes">没有找到对应员工信息</p>
                </div>
            </div>
        </t>
        <t t-foreach="users" t-as="user">
            <div class="blank30"/>
            <div class="info line">
                <div class="p10">
                    <label>姓名:</label><span><t t-esc="user.full_name"/></span>
                    <div class="blank10"/>
                    <label>花名:</label><span><t t-esc="user.nick_name"/></span>
                    <div class="blank10"/>
                    <label>工号:</label><span><t t-esc="user.job_number"/></span>
                    <div class="blank10"/>
                    <label>部门:</label><span><t t-esc="user.department_id[1]"/></span>
                    <div class="blank10"/>
                    <label>邮箱:</label><span><t t-esc="user.work_email"/></span>
                    <div class="blank10"/>
                    <label>电话:</label><span><t t-esc="user.mobile_phone"/></span>
                    <div class="blank10"/>
                </div>
            </div>
        </t>
    </t>

    <t t-name="content_info">
        <div class="main">
            <div class="p30">
                <div class="o_content_title"/>
                <div class="o_content_dashboard"/>
                <div class="o_content_notice"/>
                <div class="o_content_event"/>
            </div>
        </div>
    </t>

    <t t-name="content_title">
        <div class="title">
            <h2>Dashboard</h2>
            <p>
                <span>
                    <t t-esc="username"/>
                </span>，欢迎访问dodo，希望今天有个好心情~
            </p>
        </div>
    </t>

    <t t-name="content_dashboard">
        <div class="line dashboard">
            <div class="count-a container ">
                <!-- 最常用功能统计-->
                <div class="row">
                    <div class="col-sm-4 clearfix f-c-1">
                        <a class="pic" t-att-href="data.out_url">
                            <img src="/dtdream_home/static/img/db-icon-wcgg.png"/>
                        </a>
                        <div class="data">
                            <div class="title">外出公干</div>
                            <div class="nb">
                                <span class="nb-c"><t t-esc="data.out"/> </span>个
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 f-c-2">
                        <a class="pic" t-att-href="data.expense_url">
                            <img src="/dtdream_home/static/img/db-icon-fybx.png"/>
                        </a>
                        <div class="data">
                            <div class="title">费用报销</div>
                            <div class="nb"><span class="nb-c"><t t-esc="data.expense"/></span>个</div>
                        </div>
                    </div>
                    <div class="col-sm-4 f-c-3">
                        <a class="pic" t-att-href="data.special_url">
                            <img src="/dtdream_home/static/img/db-icon-zxsq.png"/>
                        </a>
                        <div class="data">
                            <div class="title">专项申请</div>
                            <div class="nb"><span class="nb-c"><t t-esc="data.special"/></span>个</div>
                        </div>
                    </div>
                </div>
                <!-- 最常用功能统计-->
                <!--年统计 -->
                <div id="firstchart"/>
                <!--年统计 -->
            </div>
            <div class="count-b container">
                <div class="row">
                    <div class="col-sm-6 f-c-4">
                        <a class="pic" t-att-href="data.travel_url">
                            <img src="/dtdream_home/static/img/db-icon-zxsq.png"/>
                        </a>
                        <div class="data">
                            <div class="title">出差</div>
                            <div class="nb"><span class="nb-c"><t t-esc="data.travel"></t></span>个</div>
                        </div>
                    </div>

                    <div class="col-sm-6 f-c-5">
                        <a class="pic" t-att-href="data.budget_url">
                            <img src="/dtdream_home/static/img/db-icon-zxsq.png"/>
                        </a>
                        <div class="data">
                            <div class="title">预算管理</div>
                            <div class="nb"><span class="nb-c"><t t-esc="data.budget"></t></span>个</div>
                        </div>
                    </div>
                    <!--<div class="col-sm-12 f-c-4">-->
                        <!--<div class="pic">-->
                            <!--<img src="/dtdream_home/static/img/db-icon-ywxg.png"/>-->
                        <!--</div>-->
                        <!--<div class="data">-->
                            <!--<div class="title">与我相关</div>-->
                            <!--<div class="nb"><span class="nb-c"><t t-esc="data.my"></t></span>个</div>-->
                        <!--</div>-->
                    <!--</div>-->
                </div>
                <div class="row">
                    <div id="relatechats"/>
                </div>

            </div>
        </div>
    </t>

    <t t-name="content_notice">
        <div class="notice line">
            <div class="title">
                公告
            </div>
            <!--新闻列表 -->
            <div class="newsticker">
                <ul class="newsticker-list" >
                    <t t-foreach="notices" t-as="notice">
                        <li class="newsticker-item">
                            <a  t-att-href="notice.url" target="_blank"><t t-esc="notice.content"/> </a>
                        </li>
                    </t>
                </ul>
            </div>
            <!--新闻列表 -->
        </div>
    </t>

    <t t-name="content_event">
        <div class="event-table">
            <div class="tb-row  ">
                <div class=" line tb-box-l ">
                    <div class="o_content_event_affairs"/>
                </div>
                <div class=" line tb-box-r ">
                    <div class="o_content_event_applies"/>
                </div>
            </div>
        </div>
    </t>

    <t t-name="content_event_affairs">
        <h4>待我处理事项</h4>
        <div class="tb-p-10">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>申请事项</th>
                                                <th>状态</th>
                                                <th>申请人</th>
                                                <th>申请时间</th>
                                                <th>操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="affairs" t-as="affair">
                                                <tr t-att-class="affair.affair_id">
                                                    <td><t t-esc="affair.name"/> </td>
                                                    <td>
                                                        <t t-if="affair.defer">
                                                            <span class="defer">延期<t t-esc="affair.deferdays"/>天 </span>
                                                        </t>
                                                        <t t-if="!affair.defer">
                                                            <span class="normal">正常</span>
                                                        </t>
                                                    </td>
                                                    <td><t t-esc="affair.user"/></td>
                                                    <td><t t-esc="affair.date"/></td>
                                                    <td><a t-att-href="affair.url">审批</a></td>

                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                    <nav>
                                        <ul class="pager">
                                            <li class="previous disabled" type="affairs" t-att-value="affpreviousPage"><a >上一页</a></li>
                                            <span class="pagination-info">共<t t-esc="afftotalPage"/>页/第<t t-esc="affcurrentPage"/>页</span>
                                            <li class="next" type="affairs" t-att-value="affnextPage" ><a>下一页</a></li>
                                        </ul>
                                    </nav>
                                </div>
    </t>

    <t t-name="content_event_applies">
        <h4>我申请的事项</h4>
        <div class="tb-p-10">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>申请事项</th>
                                            <th>状态</th>
                                            <th>当前责任人</th>
                                            <th>申请时间</th>
                                            <th>操作</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="applies" t-as="apply">
                                                <tr t-att-class="apply.apply_id">
                                                    <td><t t-esc="apply.name"/> </td>
                                                    <td>
                                                        <t t-if="apply.defer">
                                                            <span class="defer">延期<t t-esc="apply.deferdays"/>天</span>
                                                        </t>
                                                        <t t-if="!apply.defer">
                                                            <span class="normal">正常</span>
                                                        </t>
                                                    </td>
                                                    <td><t t-esc="apply.user"/></td>
                                                    <td><t t-esc="apply.date"/></td>
                                                    <td><a t-att-href="apply.url">查看</a></td>
                                                    <!--<td><a t-att-data-id="apply.id" href="#">查看</a></td>-->
                                                </tr>
                                            </t>
                                        </tbody>

                                    </table>

                                    <nav>
                                        <ul class="pager">
                                            <li class="previous" type="applies" t-att-value="previousPage"><a href="#">上一页</a></li>
                                            <span class="pagination-info">共<t t-esc="totalPage"/>页/第<t t-esc="currentPage"/>页</span>
                                            <li class="next" type="applies" t-att-value="nextPage" ><a>下一页</a></li>
                                        </ul>
                                    </nav>

                                </div>
    </t>

    <t t-name="home">
        <div>
            <div class="o_main_header"/>
            <div class="dodo-container clearfix">
                <div class="o_main_sidebar"/>
                <div class="o_main_content"/>
            </div>
        </div>
    </t>

</templates>