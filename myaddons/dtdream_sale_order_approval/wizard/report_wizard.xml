<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="view_dtdream_order_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.order.wizard.form</field>
        <field name="model">dtdream.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="liyou" placeholder="请填写意见"/>
                    </group>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>
                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_order_wizard" model="ir.actions.act_window">
        <field name="name">驳回</field>
        <field name="res_model">dtdream.order.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_dtdream_order_approve_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.order.approve.wizard.form</field>
        <field name="model">dtdream.order.approve.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="liyou" placeholder="请填写意见"/>
                    </group>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>
                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="act_order_approve_wizard" model="ir.actions.act_window">
        <field name="name">通过</field>
        <field name="res_model">dtdream.order.approve.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</openerp>
