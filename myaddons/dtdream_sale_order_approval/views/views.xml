    <!--项目管理中增加商务提前报备豆腐块-->
    <record id="view_business_res_product_oppr_form" model="ir.ui.view">
            <field name="name">view.business.res.product.oppr</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <button name="toggle_active" position="after">
                    <button name="action_dtdream_sale_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                          <div class="o_stat_info">
                              <field name="order_count" class="o_stat_value"/>
                              <span class="o_stat_text">订单执行审批</span>
                          </div>
                    </button>
                </button>
            </field>
