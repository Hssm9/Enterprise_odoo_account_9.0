<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="workflow" id="wkf_dtdream_assets_check">
            <field name="name">资产盘点流程</field>
            <field name="osv">dtdream.assets.check</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_dtdream_assets_check"/>
            <field name="flow_start">True</field>
            <field name="name">草稿</field>
        </record>

        <record id="act_check" model="workflow.activity">
            <field name="wkf_id" ref="wkf_dtdream_assets_check"/>
            <field name="name">启动自盘</field>
            <field name="kind">function</field>
            <field name="action">wkf_check()</field>
        </record>

        <record id="act_error" model="workflow.activity">
            <field name="wkf_id" ref="wkf_dtdream_assets_check"/>
            <field name="name">异常</field>
            <field name="kind">function</field>
            <field name="action">wkf_except()</field>
        </record>

        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_dtdream_assets_check"/>
            <field name="name">完成</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">wkf_done()</field>
        </record>


        <record id="trans_draft_check" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_check"/>
            <field name="signal">assets_create</field>
        </record>

        <record id="trans_check_error" model="workflow.transition">
            <field name="act_from" ref="act_check"/>
            <field name="act_to" ref="act_error"/>
            <field name="signal">assets_except</field>
        </record>

        <record id="trans_error_done" model="workflow.transition">
            <field name="act_from" ref="act_error"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">assets_submit</field>
        </record>

        <record id="trans_check_done" model="workflow.transition">
            <field name="act_from" ref="act_check"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">assets_submit</field>
        </record>

    </data>
</openerp>