<openerp>
  <data>

    <record id="view_dtdream_assets_check_form" model="ir.ui.view">
        <field name="name">view.dtdream.assets.check.form</field>
        <field name="model">dtdream.assets.check</field>
        <field name="arch" type="xml">
            <form>
              <header>
                <button name="%(act_dtdream_demand_app_reject_wizard)d" string="自盘" type="action" class="oe_highlight" attrs="{'invisible':['|',('state','!=','0'),('amongst','=',False)]}"/>
                <field name="state"  widget="statusbar" statusbar_visible="0,1"/>
              </header>

              <sheet>
                  <group string="基础信息">
                      <group>
                          <field name="bill_num"/>
                          <field name="name" options="{'no_create': True}"/>
                          <field name="workid"/>
                          <field name="amongst" invisible="1"/>
                          <field name="is_manage" invisible="1"/>
                      </group>
                      <group>
                          <field name="asset_name" options="{'no_create': True, 'no_open': True}"/>
                          <field name="department" options="{'no_create': True, 'no_open': True}"/>
                      </group>
                  </group>

                  <notebook>
                      <page string="资产信息">
                          <group>
                              <group>
                                  <field name="asset_code"/>
                                  <field name="quality_date"/>
                                  <field name="price"/>
                                  <field name="in_use"/>
                                  <field name="store_place" options="{'no_create': True, 'no_open': True}"/>
                                  <field name="asset_desc"/>
                              </group>
                              <group>
                                  <field name="asset_serial"/>
                                  <field name="supplier" options="{'no_create': True, 'no_open': True}"/>
                                  <field name="use_state"/>
                                  <field name="enable_date"/>
                                  <field name="mac"/>
                              </group>
                          </group>
                      </page>
                      <page string="说明">
                          <group>
                              <field name="explain"/>
                          </group>
                      </page>
                      <page string="盘点信息">
                          <group>
                              <group>
                                  <field name="has_label" widget="radio" options="{'horizontal': true}"/>
                                  <field name="unused" widget="radio" options="{'horizontal': true}"/>
                              </group>
                              <group>
                                  <field name="useable" widget="radio" options="{'horizontal': true}"/>
                                  <field name="selfcheck_date"/>
                              </group>
                          </group>
                          <group colspan="12">
                              <field name="mark"/>
                          </group>
                      </page>
                  </notebook>

              </sheet>

              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                  <field name="message_ids" widget="mail_thread"/>
              </div>
            </form>
        </field>
    </record>

     <record id="view_dtdream_assets_check_tree" model="ir.ui.view">
        <field name="name">view.dtdream.assets.check.tree</field>
        <field name="model">dtdream.assets.check</field>
        <field name="arch" type="xml">
            <tree>
                <field name="asset_code"/>
                <field name="asset_name"/>
                <field name="name"/>
                <field name="workid"/>
                <field name="department"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="act_dtdream_assets_check" model="ir.actions.act_window">
        <field name="name">资产盘点</field>
        <field name="res_model">dtdream.assets.check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <record id="view_dtdream_assets_check_filter" model="ir.ui.view">
        <field name="name">dtdream.assets.check.filter</field>
        <field name="model">dtdream.assets.check</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="asset_code"/>
                <field name="asset_name"/>
            </search>
        </field>
    </record>

  </data>
</openerp>