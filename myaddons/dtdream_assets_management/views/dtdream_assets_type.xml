<openerp>
  <data>

    <record id="view_dtdream_assets_type_form" model="ir.ui.view">
        <field name="name">view.dtdream.assets.type.form</field>
        <field name="model">dtdream.assets.type</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                  <group string="基本信息">
                      <group>
                          <field name="name" required="True"/>
                          <field name="code" required="True"/>
                          <field name="discount" required="True"/>
                          <field name="disprice" required="True"/>
                      </group>
                      <group>
                          <field name="account" required="True"/>
                          <field name="account_code" required="True"/>
                          <field name="account_level" required="True"/>
                      </group>
                  </group>
                  <group colspan="12">
                      <field name="des" required="True"/>
                  </group>
              </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dtdream_assets_type_tree">
      <field name="name">dtdream.assets.type</field>
      <field name="model">dtdream.assets.type</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="code"/>
            <field name="discount"/>
            <field name="account"/>
            <field name="account_code"/>
            <field name="account_level"/>
            <field name="disprice"/>
            <field name="des"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="dtdream_assets_type_kanban">
      <field name="name">dtdream.assets.type.kanban</field>
      <field name="model">dtdream.assets.type</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban" >
            <field name="name"/>
            <field name="code"/>
            <field name="discount"/>
            <field name="account"/>
            <field name="account_code"/>
            <field name="des"/>
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_global_click ">
                     <div class="o_kanban_image">
                          <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                      </div>
                    <div class="oe_kanban_details">
                        <div name="tags"/>
                            <ul>
                                <li ><strong>资产类别名称:</strong> <field name="name" /></li>
                                <li ><strong>资产类别编号:</strong> <field name="code" /></li>
                                <li ><strong>描述:</strong> <field name="des" /></li>
                            </ul>
                    <div name="tags"/>
                    </div>
                </div>
                </t>
            </templates>
        </kanban>
      </field>
    </record>


    <record id="act_dtdream_assets_type_config" model="ir.actions.act_window">
            <field name="name">资产类别</field>
            <field name="res_model">dtdream.assets.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
    </record>

  </data>
</openerp>