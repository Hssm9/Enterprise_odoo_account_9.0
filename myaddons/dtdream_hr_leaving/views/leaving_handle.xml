<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- explicit list view definition -->
    <!--list视图-->
    <record model="ir.ui.view" id="leaving_handle_list">
      <field name="name">leaving_handle list</field>
      <field name="model">leaving.handle</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="full_name"/>
          <field name="job_number"/>
          <field name="department"/>
          <field name="leave_date"/>
          <field name="state"/>
        </tree>
      </field>
    </record>
    <!--form视图-->
    <record model="ir.ui.view" id="leaving_handle_form">
      <field name="name">leaving_handle form</field>
      <field name="model">leaving.handle</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <button name="btn_submit" type="workflow" states="0,3,5" string="提交" class="oe_highlight"></button>
              <button name="%(dtdream_hr_leaving.act_leaving_handle_wizard)d" type="action" states="1,2,4,6,7" string="审批" class="oe_highlight"
                      context="{'default_current_state': state,'default_actual_leavig_date':leave_date}"></button>
              <button name="btn_reject" type="workflow" states="3,5" string="返回上一步" class="oe_highlight"></button>
              <field name="state" statusbar_visible="0,1,2,3,4,5,6,7,99" widget="statusbar"></field>
          </header>
          <sheet>
            <group  col="4">
              <field name="name" attrs="{'readonly':[('state', '!=','0')]}"/>
              <field name="full_name"/>
              <field name="job_number"/>
              <field name="department"/>
              <field name="post" attrs="{'readonly':[('state', '!=','0')]}"/>
              <field name="entry_day"/>
              <field name="leave_date" attrs="{'readonly':[('state', '!=','0')]}"/>
              <field name="actual_leavig_date" readonly="True" states="5,6,7,99"/>
            </group>
            <notebook>
              <page string="离岗前环节" states="3,4,5,6,7,99">
                <field name="leaving_handle_process_ids1" >
                  <tree editable="bottom" create="false" delete="false">
                    <field name="process_id" readonly="True"></field>
                    <field name="process_approver" readonly="True"></field>
                    <field name="is_finish"></field>
                    <field name="is_other"></field>
                    <field name="remark"></field>
                  </tree>
                </field>
                <field name="is_finish1" invisible="True"/>
              </page>
               <page string="离岗后环节" states="5,6,7,99">
                <field name="leaving_handle_process_ids2" >
                  <tree editable="bottom" create="false" delete="false">
                    <field name="process_id" readonly="True"></field>
                    <field name="process_approver" readonly="True"></field>
                    <field name="is_finish"></field>
                    <field name="is_other"></field>
                    <field name="remark"></field>
                  </tree>
                </field>
              </page>
            </notebook>
            <notebook>
              <page string="审批记录" states="2,3,4,5,6,7,99">
                <field name="opinion_ids" readonly="True">
                  <tree editable="bottom" default_order="create_date desc">
                      <field name="name" />
                      <field name="result" string="审批结果"/>
                      <field name="opinion" />
                      <field name="create_uid" string="审批人"/>
                      <field name="create_date" string="审批时间"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <!---->
    <record model="ir.actions.act_window" id="leaving_handle_action_window">
      <field name="name">leaving_handle window</field>
      <field name="res_model">leaving.handle</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</openerp>