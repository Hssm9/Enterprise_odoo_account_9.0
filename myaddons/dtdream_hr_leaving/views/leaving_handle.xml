<openerp>
  <data>
    <!-- explicit list view definition -->
    <!--list视图-->
    <record model="ir.ui.view" id="leaving_handle_list">
      <field name="name">leaving_handle list</field>
      <field name="model">leaving.handle</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="full_name"/>
          <field name="job_number"/>
          <field name="department"/>
          <field name="leave_date"/>
        </tree>
      </field>
    </record>
    <!--form视图-->
    <record model="ir.ui.view" id="leaving_handle_form">
      <field name="name">leaving_handle form</field>
      <field name="model">leaving.handle</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <button name="btn_submit" type="workflow" states="0" string="提交" class="oe_highlight"></button>
              <button name="btn_approve" type="workflow" states="1,2,3,4,5" string="审批" class="oe_highlight"></button>
              <button name="btn_refuse" type="workflow" states="1,2,3,4,5" string="驳回" class="oe_highlight"></button>
              <field name="state" statusbar_visible="0,1,2,3,4,5,9" widget="statusbar"></field>
          </header>
          <sheet>
            <group  col="4">
              <field name="name"/>
              <field name="full_name"/>
              <field name="job_number"/>
              <field name="department"/>
              <field name="post"/>
              <field name="entry_day"/>
              <field name="leave_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <!---->
    <record model="ir.actions.act_window" id="leaving_handle_action_window">
      <field name="name">leaving_handle window</field>
      <field name="res_model">leaving.handle</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</openerp>