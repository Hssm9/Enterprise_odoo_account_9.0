<openerp>
  <data>

        <record model="ir.ui.view" id="view_dtdream_partner_tree_inherit">
            <field name="name">view.dtdream.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="priority">6</field>
            <field name="arch" type="xml">

                <field name="display_name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="phone" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="email" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <tree>
                    <field name="partner_code"/>
                    <field name="industry_id" />
                    <field name='office_id' />
                    <field name='name' />
                    <field name='partner_owner' />
                </tree>
            </field>
        </record>

      <record model="ir.ui.view" id="view_dtdream_partner_form_inherit">
          <field name="name">view.dtdream.partner.form.inherit</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form" />
          <field name="arch" type="xml">
              <field name="website" position="after">
<!--                   <field name="partner_code" attrs="{'required' : [('is_company', '=', True),('customer', '=', True)],'invisible' : ['|',('is_company', '!=', True),('customer', '!=', True)]}"/>
                  <field name="industry_id" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : ['|',('company_type', '!=', 'company'),('customer', '!=', True)]}"/>
                  <field name="office_id" attrs="{'required' : [('is_company', '=', True),('customer', '=', True)],'invisible' : ['|',('is_company', '!=', True),('customer', '!=', True)]}"/>
                  <field name="partner_important" attrs="{'required' : [('is_company', '=', True),('customer', '=', True)],'invisible' : ['|',('is_company', '!=', True),('customer', '!=', True)]}"/> -->

                  <field name="partner_code" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : ['|',('company_type', '!=', 'company'),('customer', '!=', True)]}"/>
                  <field name="industry_id" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : ['|',('company_type', '!=', 'company'),('customer', '!=', True)]}"/>
                  <field name="office_id" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : ['|',('company_type', '!=', 'company'),('customer', '!=', True)]}"/>
                  <field name="partner_important" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : ['|',('company_type', '!=', 'company'),('customer', '!=', True)]}"/>
              </field>

              <field name="category_id" position="after">
                  <!-- <field name="partner_owner" attrs="{'required' : [('is_company', '=', True),('customer', '=', True)],'invisible' : [('customer', '!=', True)]}"/> -->
                  <field name="partner_owner" attrs="{'required' : [('company_type', '=', 'company'),('customer', '=', True)],'invisible' : [('customer', '!=', True)]}"/>
              </field>

              <field name="company_type" position="attributes">
                <attribute name="default">company</attribute>
              </field>

          </field>
      </record>

  </data>
</openerp>