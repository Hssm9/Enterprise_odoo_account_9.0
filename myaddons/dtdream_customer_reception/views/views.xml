<openerp>
  <data>

    <record id="view_dtdream_customer_reception_form" model="ir.ui.view">
        <field name="name">view.dtdream.customer.reception.form</field>
        <field name="model">dtdream.customer.reception</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="btn_submit" string="提交" type="workflow" class="oe_highlight"
                            attrs="{'invisible':['|',('state','not in',('0', '3', '4')),'|','&amp;',('state','in',('0','4')),('is_shenqingren','=', False),'&amp;',('state','=','3'),('is_receptionist','=', False)]}"/>
                    <button name="btn_back" string="撤回" type="workflow" class="oe_highlight"
                            attrs="{'invisible':['|',('state','not in',('1', '2', '3')),('is_shenqingren','=',False)]}" confirm="请确认是否撤回?"/>
                    <button name="btn_agree" string="同意" type="workflow" class="oe_highlight"
                            attrs="{'invisible':['|',('state','not in',('1', '2')),('is_current','=',False)]}"/>
                    <button name="btn_reject" string="驳回" type="workflow" class="oe_highlight"
                            attrs="{'invisible':['|',('state','not in',('1', '2')),('is_current','=',False)]}"/>
                    <field name="state"  widget="statusbar"
                           statusbar_visible="0,1,2,3,4,99"/>
               </header>
              <sheet>
                  <group string="基本信息">
                      <group>
                          <field name="bill_num" readonly="True" attrs="{'invisible':[('bill_num','=',False)]}"/>
                          <field name="write_time" readonly="True"/>
                          <field name="is_manage" invisible="True"/>
                          <field name="entry_way" invisible="True"/>
                          <field name="is_current" invisible="True"/>
                          <field name="is_shenqingren" invisible="True"/>
                          <field name="is_receptionist" invisible="True"/>
                      </group>
                      <group>
                          <field name="duty_tel"/>
                      </group>
                  </group>

                  <group string="员工信息">
                      <group>
                          <field name="name" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="post"/>
                          <field name="department"/>
                          <field name="home"/>
                      </group>
                      <group>
                          <field name="workid"/>
                          <field name="iphone"/>
                          <field name="code"/>
                      </group>
                  </group>

                  <group string="客户信息">
                      <group>
                          <field name="customer" domain="[('customer', '=', True)]" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)], 'required':[('customer_v','=','0')]}"/>
                          <field name="customer_level" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="customer_source" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="customer_v" widget="radio" options="{'horizontal': true}" attrs="{'readonly':['|',('entry_way','=',True),'&amp;',('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="background" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                      <group>
                          <field name="visit_count" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="project" options="{'no_open': True,'no_create': True}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="inter_tel" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="visit_date" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="purpose" required="True" options="{'no_open': True,'no_create': True}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                  </group>
                  <group string="主宾信息">
                      <notebook>
                        <page>
                            <field name="guest" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}" string="主宾信息">
                                <tree editable="bottom">
                                    <field name="name_guest" required="True"/>
                                    <field name="post_guest"/>
                                </tree>
                            </field>
                        </page>
                      </notebook>
                  </group>
                  <group string="客户接待执行人" attrs="{'invisible':[('state','in',('0','1'))]}">
                      <group>
                          <field name="receptionist" attrs="{'readonly':[('state','!=', '2'),('is_manage','=',False)]}"/>
                      </group>
                  </group>

                  <group string="接待资源需求">
                      <group>
                          <field name="accompany_leads" widget="many2many_tags" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="participants" widget="many2many_tags" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                      <group>
                          <field name="interpreter" widget="many2many_tags" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                  </group>

                  <group string="会议室资源需求">
                      <group>
                          <field name="meeting" options="{'no_open': True,'no_create': True}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="room_capacity" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                      <group>
                          <field name="reserve_time" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="busy_time_room" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                      <group style="margin-top: -10px;" colspan="12">
                          <label string="会议室准备" colspan="4" style="font-weigh:bold"/>
                          <div class="o_row dtdream_customer_checkbox">
                              <field name="ppt" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">PPT</span>
                              <field name="camera" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">摄影</span>
                              <field name="water" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">瓶装水</span>
                              <field name="tea" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">茶水</span>
                              <field name="meeting_document" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">公司资料</span>
                              <field name="seat_board" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">席位牌</span>
                              <field name="banner" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:30px">横幅</span>
                              <field name="other_more" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>其它</span>
                          </div>
                          <group>
                              <field name="other_more_text" attrs="{'invisible':[('other_more','=',False)],'readonly':[('state','!=', '0'),('is_manage','=',False)]}" />
                          </group>
                      </group>
                  </group>

                  <group string="接送安排">
                      <group>
                          <div class="o_row dtdream_customer_input dtdream_customer_checkbox">
                              <field name="car" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>小车</span>
                              <field name="car_num" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>部</span>
                          </div>
                          <div class="o_row dtdream_customer_input dtdream_customer_checkbox">
                              <field name="commercial_vehicle" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>商务车</span>
                              <field name="commercial_vehicle_num" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>部</span>
                          </div>
                      </group>
                      <group>
                          <div class="dtdream_customer_input dtdream_customer_checkbox">
                              <field name="bicycle" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>自行乘车</span>
                          </div>
                      </group>
                  </group>

                  <group string="行程路线">
                      <notebook>
                        <page>
                            <field name="path" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}" string="行程路线">
                                <tree editable="bottom">
                                    <field name="start_time"/>
                                    <field name="starting"/>
                                    <field name="end_time"/>
                                    <field name="destination"/>
                                </tree>
                            </field>
                        </page>
                      </notebook>
                  </group>

                  <group string="接送要求">
                      <group>
                          <div class="o_row dtdream_customer_checkbox">
                              <field name="driver" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>司机</span>
                          </div>
                          <div class="dtdream_customer_checkbox">
                               <field name="card" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                               <span>接机牌</span>
                          </div>
                      </group>
                      <group>
                          <div class="o_row dtdream_customer_checkbox">
                              <field name="assistance" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>接机/接站人员</span>
                          </div>
                          <div class="dtdream_customer_checkbox">
                              <field name="flower" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span>鲜花</span>
                          </div>
                      </group>
                  </group>

                  <group string="接待标准">
                      <group>
                          <label for="single_room" string="酒店住宿"/>
                          <div class="o_row dtdream_customer_checkbox" style="margin: -5px 0 5px -50px;">
                              <field name="single_room" attrs="{'invisible':[('room_self','=',True)], 'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span attrs="{'invisible':[('room_self','=',True)]}">标准单人房</span>
                              <field name="single_room_num" attrs="{'invisible':[('room_self','=',True)], 'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:20px" attrs="{'invisible':[('room_self','=',True)]}">间</span>
                              <field name="double_room" attrs="{'invisible':[('room_self','=',True)], 'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span attrs="{'invisible':[('room_self','=',True)]}">标准双人房</span>
                              <field name="double_room_num" attrs="{'invisible':[('room_self','=',True)], 'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-right:20px" attrs="{'invisible':[('room_self','=',True)]}">间</span>
                              <field name="room_self" attrs="{'invisible':['|',('double_room','=',True),('single_room','=',True)], 'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span attrs="{'invisible':['|',('double_room','=',True),('single_room','=',True)]}">自理安排酒店</span>
                          </div>
                          <label for="hotel"/>
                          <div class="o_row" style="margin: -2px 0 5px -50px;">
                              <field name="hotel" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          </div>
                          <label for="dinner"/>
                          <div class="o_row" style="margin: -2px 0 5px -50px;">
                              <field name="dinner" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          </div>
                          <label for="memories"/>
                          <div class="o_row" style="margin: -2px 0 5px -50px;">
                              <field name="memories" options="{'no_open': True,'no_create': True}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                              <span style="margin-left: 30px;font-weight:bold">数量</span>
                              <field name="memories_num" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          </div>
                          <label for="remark"/>
                          <div class="o_row" style="margin: -2px 0 5px -50px;">
                              <field name="remark" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          </div>
                      </group>
                      <group>
                          <field name="hotel_position" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="payment_hotel" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="dinner_position" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="payment_dinner" widget="radio" options="{'horizontal': true}" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                  </group>

                  <group string="费用预算">
                      <group>
                          <field name="hotel_fee" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="car_fee" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="other_fee" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                      </group>
                      <group>
                          <field name="dinner_fee" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="advertise_fee" required="True" attrs="{'readonly':[('state','!=', '0'),('is_manage','=',False)]}"/>
                          <field name="total_fee"/>
                      </group>
                  </group>

                  <group string="接待小结" attrs="{'invisible':[('state','in',('0','1', '2'))]}">
                      <group>
                          <field name="summary" attrs="{'readonly':['|',('is_receptionist','=',False),'&amp;',('state','!=', '3'),('is_manage','=',False)]}"/>
                      </group>
                  </group>
                  <group string="评价" attrs="{'invisible':[('state','not in',('4','99'))]}">
                      <group>
                          <label for="score" string="请对本次的客户接待安排进行评价(1分最差，10分最好):" colspan="2"/>
                          <div class="o_row">
                              <field name="score" attrs="{'readonly':['|',('is_shenqingren','=',False),'&amp;',('state','!=', '4'),('is_manage','=',False)]}"/>
                          </div>
                      </group>
                  </group>

              </sheet>

              <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
              </div>

            </form>
        </field>
    </record>

    <record id="view_dtdream_customer_reception_filter" model="ir.ui.view">
        <field name="name">dtdream.customer.reception.filter</field>
        <field name="model">dtdream.customer.reception</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="bill_num"/>
                <field name="workid"/>
            </search>
        </field>
    </record>

    <record id="view_dtdream_customer_reception_tree" model="ir.ui.view">
        <field name="name">view.dtdream.customer.reception.tree</field>
        <field name="model">dtdream.customer.reception</field>
        <field name="arch" type="xml">
            <tree>
              <field name="bill_num"/>
              <field name="name"/>
              <field name="workid"/>
              <field name="iphone"/>
              <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_marketing_activities_form" model="ir.ui.view">
        <field name="name">marketing.activities.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                <page string="营销活动" name="marketing_activities">
                   <field name="marketing_activities" string="营销活动">
                       <tree editable="bottom" create="0">
                           <field name="activity" readonly="True"/>
                           <field name="activity_time" readonly="True"/>
                           <field name="activity_place" readonly="True"/>
                           <field name="customer" readonly="True"/>
                           <field name="company" readonly="True"/>
                           <field name="activity_content"/>
                           <field name="activity_result"/>
                       </tree>
                   </field>
                </page>
            </xpath>

            <button name="toggle_active" position="before">
               <button class="oe_stat_button" type="object" name="act_dtdream_customer_reception"
                icon="fa-edit">
                    <field string="客户接待" name="customer_reception" widget="statinfo"/>
               </button>
            </button>
        </field>
    </record>

    <record id="view_marketing_activities_tree" model="ir.ui.view">
        <field name="name">view.marketing.activities.tree</field>
        <field name="model">dtdream.marketing.activities</field>
        <field name="arch" type="xml">
            <form string="营销活动">
              <sheet>
                  <group>
                      <group>
                          <field name="activity" readonly="True"/>
                          <field name="activity_time" readonly="True"/>
                      </group>
                      <group>
                          <field name="activity_place" readonly="True"/>
                          <field name="activity_content"/>
                          <field name="activity_result"/>
                      </group>
                      <group style="margin-top:-30px">
                          <field name="company" readonly="True"/>
                          <field name="customer" readonly="True"/>
                      </group>
                  </group>
              </sheet>
            </form>
        </field>
     </record>

    <record id="view_dtdream_customer_reception_config_form" model="ir.ui.view">
        <field name="name">view.dtdream.customer.reception.config.form</field>
        <field name="model">dtdream.customer.reception.config</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                  <group>
                      <group>
                          <field name="duty_phone"/>
                          <field name="officer"/>
                      </group>
                      <group>
                          <field name="car"/>
                          <field name="inter"/>
                      </group>
                      <notebook colspan="12">
                          <page string="来访目的">
                              <field name="purpose">
                                  <tree editable="bottom">
                                      <field name="name"/>
                                  </tree>
                              </field>
                          </page>
                          <page string="会议室资源">
                              <field name="metting_room">
                                  <tree editable="bottom">
                                      <field name="name"/>
                                  </tree>
                              </field>
                          </page>
                          <page string="纪念品">
                              <field name="memory">
                                  <tree editable="bottom">
                                      <field name="name"/>
                                  </tree>
                              </field>
                          </page>
                      </notebook>
                  </group>
              </sheet>
            </form>
        </field>
     </record>

      <record id="view_dtdream_visit_path_form" model="ir.ui.view">
        <field name="name">view.dtdream.visit.path.form</field>
        <field name="model">dtdream.visit.path</field>
        <field name="arch" type="xml">
            <form string="行程路线">
              <sheet>
                  <group>
                      <group>
                          <field name="start_time"/>
                          <field name="starting"/>
                      </group>
                      <group>
                          <field name="end_time"/>
                          <field name="destination"/>
                      </group>
                  </group>
              </sheet>
            </form>
        </field>
     </record>

     <record id="view_dtdream_guest_honour_form" model="ir.ui.view">
        <field name="name">view.dtdream.guest.honour.form</field>
        <field name="model">dtdream.guest.honour</field>
        <field name="arch" type="xml">
            <form string="主宾信息">
              <sheet>
                  <group>
                      <group>
                          <field name="name_guest"/>
                      </group>
                      <group>
                          <field name="post_guest"/>
                      </group>
                  </group>
              </sheet>
            </form>
        </field>
     </record>

  </data>
</openerp>