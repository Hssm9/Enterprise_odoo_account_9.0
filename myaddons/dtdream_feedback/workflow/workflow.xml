<?xml version='1.0' ?>

<openerp>
    <data noupdate='0'>

        <!-- 工作流 -->
        <record id='wkf_feedback' model='workflow' >
            <field name='name'>wkf.feedback</field>
            <field name='osv'>dtdream.feedback.advice</field>
            <field name='on_create'>True</field>
        </record>

        <!-- 工作流draft节点 -->
        <record id='act_draft' model='workflow.activity' >
            <field name='wkf_id' ref='wkf_feedback' />
            <field name='name'>draft</field>
            <field name='flow_start' eval='True'/>
            <field name='kind'>function</field>
            <field name='action'>wkf_draft()</field>
        </record>

        <!-- 工作流confirm节点 -->
        <record id='act_confirm' model='workflow.activity' >
            <field name='wkf_id' ref='wkf_feedback' />
            <field name='name'>confirm</field>
           <!-- <field name='action_id' ref='act_send_email' /> -->
            <field name='kind'>function</field>
            <field name='action'>wkf_confirm()</field>
        </record>

        <!-- 工作流answer节点 -->
        <record id='act_answer' model='workflow.activity' >
            <field name='wkf_id' ref='wkf_feedback' />
            <field name='name'>answer</field>
            <field name='flow_stop' eval='True' />
            <field name='kind'>function</field>
            <field name='action'>wkf_answer()</field>
        </record>

        <!-- 工作流draft->confirm节点转换 -->
        <record model='workflow.transition' id='feedback_draft2new'>
            <field name='act_from' ref='act_draft' />
            <field name='act_to' ref='act_confirm' />
            <field name='signal'>btn_confirm</field>
        </record>


        <!-- 工作流confirm->answer节点转换 -->
        <record model='workflow.transition' id='feedback_checked2answer'>
            <field name='act_from' ref='act_confirm' />
            <field name='act_to' ref='act_answer' />
            <field name='signal'>btn_answer</field>
        </record>

    </data>
</openerp>