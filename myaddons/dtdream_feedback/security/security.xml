<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.module.category" id="module_feedback_group">
            <field name="name">意见反馈</field>
            <field name="description">关于意见反馈的组</field>
            <field name="sequence">2</field>
        </record>

        <record id="group_feedback_deal" model="res.groups">
            <field name="name">意见反馈处理组</field>
            <field name="category_id" ref="module_feedback_group"/>
        </record>

        <record id="group_manager_deal" model="res.groups">
            <field name="name">处理人配置权限组</field>
            <field name="category_id" ref="module_feedback_group"/>
        </record>

        <record id="rule_feedback_own" model="ir.rule">
             <field name="name">查看自已的意见</field>
             <field name="model_id" ref="dtdream_feedback.model_dtdream_feedback_advice"/>
             <field name="perm_read" eval="1"/>
             <field name="perm_create" eval="0"/>
             <field name="perm_write" eval="0"/>
             <field name="perm_unlink" eval="0"/>
             <field name="groups" eval="[(4, ref('base.group_user'))]"/>
             <field name="domain_force">[('adviceMan.user_id','=',user.id)]</field>
        </record>

        <record id="rule_feedback_deal" model="ir.rule">
             <field name="name">查看所有的意见</field>
             <field name="model_id" ref="dtdream_feedback.model_dtdream_feedback_advice"/>
             <field name="perm_read" eval="1"/>
             <field name="perm_create" eval="1"/>
             <field name="perm_write" eval="1"/>
             <field name="perm_unlink" eval="1"/>
             <field name="groups" eval="[(4, ref('group_feedback_deal'))]"/>
             <field name="domain_force">['|',('state','not in',['draft']),('adviceMan.user_id','=',user.id)]</field>
        </record>
        <!--
        <record id="rule_feedback" model="ir.rule">
             <field name="name">处理人意见处理</field>
             <field name="model_id" ref="dtdream_feedback.model_dtdream_feedback_advice"/>
             <field name="perm_read" eval="1"/>
             <field name="perm_create" eval="0"/>
             <field name="perm_write" eval="0"/>
             <field name="perm_unlink" eval="0"/>
             <field name="groups" eval="[(4, ref('base.group_user'))]"/>
             <field name="domain_force">[('manager.manager.user_id','=',user.id)]</field>
        </record>
        -->
    </data>
</openerp>