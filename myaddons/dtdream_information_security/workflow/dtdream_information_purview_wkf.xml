<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="dtdream_information_purview_workflow" model="workflow">
            <field name="name">权限申请工作流</field>
            <field name="osv">dtdream.information.purview</field>
            <field name="on_create">True</field>
        </record>

        <record id="activity_cg" model="workflow.activity">
            <field name="wkf_id" ref="dtdream_information_purview_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">创建草稿</field>
            <field name="kind">function</field>
            <field name="action">wkf_cg()</field>
        </record>

        <record id="activity_zgsp" model="workflow.activity">
            <field name="wkf_id" ref="dtdream_information_purview_workflow"/>
            <field name="name">主管审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_zgsp()</field>
        </record>

        <record id="activity_syrsp" model="workflow.activity">
            <field name="wkf_id" ref="dtdream_information_purview_workflow"/>
            <field name="name">所有人审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_syrsp()</field>
        </record>

        <record id="activity_zhongzhi" model="workflow.activity">
            <field name="wkf_id" ref="dtdream_information_purview_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">终止</field>
            <field name="kind">function</field>
            <field name="action">wkf_zhongzhi()</field>
        </record>

        <record id="activity_wc" model="workflow.activity">
            <field name="wkf_id" ref="dtdream_information_purview_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_wc()</field>
        </record>

        <record id="trans_a_b" model="workflow.transition">
            <field name="act_from" ref="activity_cg"/>
            <field name="act_to" ref="activity_zgsp"/>
            <field name="signal">cg_to_zgsp</field>
        </record>

        <record id="trans_a_c" model="workflow.transition">
            <field name="act_from" ref="activity_cg"/>
            <field name="act_to" ref="activity_syrsp"/>
            <field name="signal">cg_to_syrsp</field>
        </record>

        <record id="trans_b_a" model="workflow.transition">
            <field name="act_from" ref="activity_zgsp"/>
            <field name="act_to" ref="activity_cg"/>
            <field name="signal">zgsp_to_cg</field>
        </record>

        <record id="trans_b_c" model="workflow.transition">
            <field name="act_from" ref="activity_zgsp"/>
            <field name="act_to" ref="activity_syrsp"/>
            <field name="signal">zgsp_to_syrsp</field>
        </record>

        <record id="trans_b_d" model="workflow.transition">
            <field name="act_from" ref="activity_zgsp"/>
            <field name="act_to" ref="activity_wc"/>
            <field name="signal">zgsp_to_wc</field>
        </record>

        <record id="trans_b_e" model="workflow.transition">
            <field name="act_from" ref="activity_zgsp"/>
            <field name="act_to" ref="activity_zhongzhi"/>
            <field name="signal">zgsp_to_zhongzhi</field>
        </record>

        <record id="trans_c_a" model="workflow.transition">
            <field name="act_from" ref="activity_syrsp"/>
            <field name="act_to" ref="activity_cg"/>
            <field name="signal">syrsp_to_cg</field>
        </record>

        <record id="trans_c_d" model="workflow.transition">
            <field name="act_from" ref="activity_syrsp"/>
            <field name="act_to" ref="activity_wc"/>
            <field name="signal">syrsp_to_wc</field>
        </record>

        <record id="trans_c_e" model="workflow.transition">
            <field name="act_from" ref="activity_syrsp"/>
            <field name="act_to" ref="activity_zhongzhi"/>
            <field name="signal">syrsp_to_zhongzhi</field>
        </record>

    </data>
</openerp>