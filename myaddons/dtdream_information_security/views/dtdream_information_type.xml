<openerp>
    <data>
        <record id="act_dtdream_information_type" model="ir.actions.act_window">
            <field name="name">类别配置</field>
            <field name="res_model">dtdream.information.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="dtdream_information_type_tree" model="ir.ui.view">
            <field name="name">dtdream_information_type_tree</field>
            <field name="model">dtdream.information.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="admin"/>
                </tree>
            </field>
        </record>

        <record id="dtdream_information_type_kanban" model="ir.ui.view">
            <field name="name">dtdream_information_type_kanban</field>
            <field name="model">dtdream.information.type</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" >
                    <field name="name"/>
                    <field name="url"/>
                    <field name="admin"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click ">
                             <div class="o_kanban_image">
                                  <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                              </div>
                            <div class="oe_kanban_details">
                                <div name="tags"/>
                                    <ul>
                                        <li ><strong>名称:</strong> <field name="name" /></li>
                                        <li ><strong>链接:</strong> <field name="url" /></li>
                                        <li ><strong>管理员:</strong> <field name="admin" /></li>
                                    </ul>
                            <div name="tags"/>
                            </div>
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>




        <record id="dtdream_information_type_form" model="ir.ui.view">
            <field name="name">dtdream_information_type_form</field>
            <field name="model">dtdream.information.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="user" attrs="{'invisible':[('is_conf','=',False)]}"/>
                                <field name="token" attrs="{'invisible':[('is_git','=',False)]}"/>
                                <field name="admin"/>
                            </group>
                            <group>
                                <field name="url"/>
                                <field name="passw" attrs="{'invisible':[('is_conf','=',False)]}" password="True"/>
                                <field name="git_group" attrs="{'invisible':[('is_git','=',False)]}"/>
                                <field name="type"/>
                                <field name="is_conf" invisible="1"/>
                                <field name="is_git" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="desc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</openerp>