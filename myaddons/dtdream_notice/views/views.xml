<openerp>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="dtdream_notice_tree_view">
      <field name="name">dtdream_notice tree view</field>
      <field name="model">dtdream_notice.dtdream_notice</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="content"/>
          <field name="valid"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="dtdream_notice_kanban_view">
      <field name="name">dtdream_notice tree kanban view</field>
      <field name="model">dtdream_notice.dtdream_notice</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban" >
          <field name="name"/>
          <field name="content"/>
          <field name="valid"/>
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_global_click ">
                     <div class="o_kanban_image">
                          <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                      </div>
                    <div class="oe_kanban_details">
                        <div name="tags"/>
                            <ul>
                                <li ><strong>单号:</strong> <field name="name" /></li>
                            </ul>
                    <div name="tags"/>
                    </div>
                </div>
                </t>
            </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.ui.view" id="dtdream_notice_form_view">
      <field name="name">dtdream_notice form view</field>
      <field name="model">dtdream_notice.dtdream_notice</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group string="公告信息">
              <field name="name" readonly="1"/>
              <field name="url"/>
              <field name="content"/>
              <field name="valid"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="dtdream_notice.action_window">
      <field name="name">所有公告</field>
      <field name="res_model">dtdream_notice.dtdream_notice</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_dtdream_notice_form_view">
        <field name="act_window_id" ref="dtdream_notice.action_window"/>
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dtdream_notice_form_view"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_dtdream_notice_tree_view">
        <field name="act_window_id" ref="dtdream_notice.action_window"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dtdream_notice_tree_view"/>
    </record>

    <!-- Top menu item -->
    <menuitem name="公告" groups="dtdream_notice.group_dtdream_notice_admin" id="dtdream_notice.menu_root" web_icon="dtdream_notice,static/src/img/dtdream_notice.png"/>

    <!-- menu categories -->
    <menuitem name="所有公告" id="dtdream_notice.view_all_notice" parent="dtdream_notice.menu_root" action="dtdream_notice.action_window"/>

  </data>
</openerp>