    <!-- ====================================================菜单===================================================== -->
    <menuitem name="合同评审" id="menu_contract_root" web_icon="dtdream_contract,static/src/img/dtdream_contract.png"></menuitem>
    <menuitem name="我的申请" id="menu_contract_my_request" parent="menu_contract_root" action="open_contract_my_request"></menuitem>
    <menuitem name="待我审批" id="menu_contract_to_approve" parent="menu_contract_root" action="open_wait_to_approve"></menuitem>
    <menuitem name="我已审批" id="menu_contract_approved" parent="menu_contract_root" action="open_approved"></menuitem>
    <menuitem name="所有合同" id="menu_contract_all" parent="menu_contract_root" action="open_all_contract" groups="group_contract_view_all"></menuitem>
    <menuitem name="审批人维护" id="menu_contract_config" parent="menu_contract_root" action="open_contract_config" groups="group_contract_config"></menuitem>
