<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_dtdream_travel_chucha_form" model="ir.ui.view">
        <field name="name">view.dtdream.travel.chucha.form</field>
        <field name="model">dtdream.travel.chucha</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="btn_submit" string="提交" type="workflow" states="0"/>
                    <button name="btn_approve" string="通过" type="workflow" states="1,2,3,4,5"/>
                    <button name="btn_reject" string="驳回" type="workflow" states="1,2,3,4,5"/>
                    <field name="state"  widget="statusbar"
                           statusbar_visible="0,1,2,3,4,5,99"/>
                </header>
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="workid"/>
                          <field name="deperment"/>
                          <field name="traveling_fee" attrs="{'readonly':[('state', '!=','0')]}"/>
                          <field name="incity_fee" attrs="{'readonly':[('state', '!=','0')]}"/>
                          <field name="hotel_expense" attrs="{'readonly':[('state', '!=','0')]}"/>
                          <field name="other_expense" attrs="{'readonly':[('state', '!=','0')]}"/>
                          <field name="total"/>
                      </group>
                      <group>
                          <field name="shenpi_first"/>
                          <field name="shenpi_second"/>
                          <field name="shenpi_third"/>
                          <field name="shenpi_fourth"/>
                          <field name="shenpi_fifth"/>
                      </group>
                  </group>

                  <notebook>
                        <page string="行程">
                            <field name="journey_id" attrs="{'readonly':[('state', '!=','0')]}">
                                <tree editable="bottom">
                                    <field name="startaddress"/>
                                    <field name="endaddress"/>
                                    <field name="starttime"/>
                                    <field name="endtime"/>
                                </tree>
                            </field>
                        </page>
                        <page string="原因">
                            <field name="reason" attrs="{'readonly':[('state', '!=','0')]}"/>
                        </page>
                  </notebook>
              </sheet>

            </form>
        </field>
    </record>

    <record id="view_dtdream_travel_chucha_tree" model="ir.ui.view">
        <field name="name">view.dtdream.travel.chucha.tree</field>
        <field name="model">dtdream.travel.chucha</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="workid"/>
              <field name="deperment"/>
            </tree>
        </field>
    </record>
  </data>
</openerp>