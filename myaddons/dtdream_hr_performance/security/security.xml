<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

    <record model="ir.module.category" id="module_hr_performance_group">
            <field name="name">绩效管理</field>
            <field name="description">绩效管理</field>
            <field name="sequence">2</field>
    </record>

    <record id="group_hr_inter_performance" model="res.groups">
        <field name="name">HR接口人</field>
        <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        <field name="category_id" ref="module_hr_performance_group"/>
    </record>

    <record id="group_hr_manage_performance" model="res.groups">
        <field name="name">HR绩效管理员</field>
        <field name="implied_ids" eval="[(4,ref('group_hr_inter_performance'))]"/>
        <field name="category_id" ref="module_hr_performance_group"/>
    </record>

    <record id="dtdream_hr_performance_read" model="ir.rule">
        <field name="name">员工查看绩效申请</field>
        <field name="model_id" ref="model_dtdream_hr_performance"/>
        <field name="domain_force">['|',('name.user_id','=',user.id),'|',('officer.user_id','=',user.id),('officer_sec.user_id','=',user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="dtdream_hr_performance_inter_read" model="ir.rule">
        <field name="name">接口人查看接口部门绩效申请</field>
        <field name="model_id" ref="model_dtdream_hr_performance"/>
        <field name="domain_force">[]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('group_hr_inter_performance'))]"/>
    </record>

    <record id="dtdream_hr_performance_manage_read" model="ir.rule">
        <field name="name">管理员查看所有绩效申请</field>
        <field name="model_id" ref="model_dtdream_hr_performance"/>
        <field name="domain_force">[]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('group_hr_manage_performance'))]"/>
    </record>


    </data>
</openerp>