<openerp>
  <data>
    <record id="view_dtdream_hr_pbc_form" model="ir.ui.view">
        <field name="name">view.dtdream.hr.pbc.form</field>
        <field name="model">dtdream.hr.pbc</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                <group>
                  <group>
                    <field name="department" options="{'no_create': True}"/>
                  </group>
                  <group>
                    <field name="quarter"/>
                  </group>
                </group>

                <notebook>
                    <page string="部门目标">
                        <field name="target">
                            <tree editable="bottom">
                                <field name="num"/>
                                <field name="works"/>
                            </tree>
                        </field>
                    </page>
                  </notebook>

              </sheet>
            </form>
        </field>
    </record>

    <record id="view_dtdream_hr_pbc_tree" model="ir.ui.view">
        <field name="name">view.dtdream.hr.pbc.tree</field>
        <field name="model">dtdream.hr.pbc</field>
        <field name="arch" type="xml">
            <tree>
              <field name="department"/>
              <field name="quarter"/>
            </tree>
        </field>
    </record>

    <record id="view_dtdream_hr_pbc_filter" model="ir.ui.view">
        <field name="name">dtdream.hr.pbc.filter</field>
        <field name="model">dtdream.hr.pbc</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="department"/>
                <filter string="第一季度" domain="[('quarter','=','1')]" name='first'/>
                <filter string="第二季度" domain="[('quarter','=','2')]" name='second'/>
                <filter string="第三季度" domain="[('quarter','=','3')]" name='third'/>
                <filter string="第四季度" domain="[('quarter','=','4')]" name="fourth"/>
            </search>
        </field>
    </record>

    <record id="view_dtdream_hr_performance_form" model="ir.ui.view">
        <field name="name">view.dtdream.hr.performance.form</field>
        <field name="model">dtdream.hr.performance</field>
        <field name="arch" type="xml">
            <form>
              <header>
                    <field name="state"  widget="statusbar"
                           statusbar_visible="0,99"/>
                </header>

              <sheet>
                <group string="基本信息">
                  <group>
                    <field name="department" options="{'no_create': True}"/>
                    <field name="quarter"/>
                    <field name="officer"/>
                    <field name="result"/>
                  </group>
                  <group>
                    <field name="name"/>
                    <field name="workid"/>
                    <field name="onwork"/>
                  </group>
                </group>

                <notebook>
                    <page string="部门PBC">
                        <field name="pbc">
                            <tree>
                                <field name="department"/>
                                <!--<field name="target" string="工作内容"/>-->
                            </tree>
                        </field>
                    </page>
                  </notebook>

              </sheet>
            </form>
        </field>
    </record>

    <record id="view_dtdream_hr_pbc_per_form" model="ir.ui.view">
        <field name="name">view.dtdream.hr.pbc.per</field>
        <field name="model">dtdream.hr.pbc.per</field>
        <field name="arch" type="xml">
            <form readonly="1">
              <sheet>
                <group>
                  <group>
                    <field name="department" options="{'no_create': True}"/>
                  </group>
                  <group>
                    <field name="quarter"/>
                  </group>
                </group>

                <!--<notebook>-->
                    <!--<page string="部门目标">-->
                        <!--<field name="target">-->
                            <!--<tree>-->
                                <!--<field name="num"/>-->
                                <!--<field name="works"/>-->
                            <!--</tree>-->
                        <!--</field>-->
                    <!--</page>-->
                  <!--</notebook>-->

              </sheet>
            </form>
        </field>
    </record>


  </data>
</openerp>