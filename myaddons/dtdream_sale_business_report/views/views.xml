                            <sheet>
                                <group>
                                    <group>
                                        <field name="office_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="product_shenpiren" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                    <group>
                                        <field name="business_interface_person" options='{"no_open": True, "no_create": True}'/>
                                        <field name="service_shenpiren" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
