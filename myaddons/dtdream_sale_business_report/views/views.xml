                    <field name="shenpi_product_line">
                        <tree>
                            <field name="categ_id" widget="many2many_tags" domain="[('parent_id','!=',False)]" options='{"no_open": True, "no_create": True}'/>
                            <field name="zongbu_product_charge" options='{"no_open": True, "no_create": True}'/>
                          </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="categ_id" domain="[('parent_id','!=',False),('parent_id.parent_id','=',False)]"  options='{"no_open": True, "no_create": True}' widget="many2many_tags"/>
                                    </group>
                                    <group>
                                        <field name="zongbu_product_charge" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                <page string="办事处主任配置">
                    <field name="shenpi_line">
                        <tree>
                            <field name="office_id" options='{"no_open": True, "no_create": True}'/>
                            <field name="office_director" options='{"no_open": True, "no_create": True}'/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="office_id" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                    <group>
                                        <field name="office_director" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                 <page string="系统部部长配置">
                    <field name="shenpi_line_system">
                        <tree>
                            <field name="system_department_id" options='{"no_open": True, "no_create": True}' domain="[('parent_id','=',False)]"/>
                            <field name="system_director" options='{"no_open": True, "no_create": True}'/>
                          </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="system_department_id" options='{"no_open": True, "no_create": True}' domain="[('parent_id','=',False)]"/>
                                    </group>
                                    <group>
                                        <field name="system_director" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                 <page string="区域商务审批配置">
                    <field name="office_business_shenpi_line">
                        <tree>
                            <field name="office_ids" options='{"no_open": True, "no_create": True}' widget="many2many_tags"/>
