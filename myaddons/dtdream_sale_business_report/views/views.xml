                                    </group>
                                    <group>
                                        <field name="office_business_director" options='{"no_open": True, "no_create": True}'/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </notebook>
            </sheet>
       </form>
     </field>
