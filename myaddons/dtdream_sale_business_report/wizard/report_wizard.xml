<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="view_dtdream_report_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.report.wizard.form</field>
        <field name="model">dtdream.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="liyou" placeholder="请填写意见"/>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>
                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_report_wizard" model="ir.actions.act_window">
        <field name="name">驳回</field>
        <field name="res_model">dtdream.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_dtdream_report_approve_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.report.approve.wizard.form</field>
        <field name="model">dtdream.report.approve.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="if_view_gongkan" invisible="1"/>
                    <field name="liyou" placeholder="请填写意见"/>
                    <field name="if_gongkan" attrs="{'invisible':[('if_view_gongkan','=',False)]}"/>
                    <field name="gongkan_content"  placeholder="请填写工勘内容" attrs="{'invisible':['|',('if_gongkan','!=','1'),('if_view_gongkan','=',False)]}"/>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>
                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

