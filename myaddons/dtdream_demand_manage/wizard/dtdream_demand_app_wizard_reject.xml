<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="view_dtdream_demand_app_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.demand.app.wizard.form</field>
        <field name="model">dtdream.demand.app.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="liyou" placeholder="请填写理由" required="True"/>
                    </group>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>

                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_dtdream_demand_app_reject_wizard" model="ir.actions.act_window">
        <field name="name">驳回</field>
        <field name="res_model">dtdream.demand.app.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_dtdream_demand_app_agree_form" model="ir.ui.view">
        <field name="name">view.dtdream.demand.app.agree.wizard.form</field>
        <field name="model">dtdream.demand.app.agree.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="liyou" placeholder="请填写意见" required="True"/>
                        <field name="need" attrs="{'invisible': [('state','!=','2')]}" required="True"/>
                        <field name="analyst" attrs="{'invisible': ['|',('state','!=','2'),'&amp;',('state','=','2'),('need','in',('1',False))],'required':[('state','=','2'),('need','=','0')]}" options="{'no_create': True}"/>
                        <field name="practice_man" attrs="{'invisible': ['|',('state','not in',('2','4')),'&amp;',('state','=','2'),('need','in',('0', False))],'required':['|',('state','=','4'),'&amp;',('state','=','2'),('need','=','1')]}" options="{'no_create': True}"/>
                        <field name="state" invisible="True"/>
                    </group>
                </group>
                <footer>
                    <button name="btn_confirm" type="object"
                            string="确认" class="oe_highlight"/>

                    <button special="cancel" string="取消"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_dtdream_demand_app_agree_wizard" model="ir.actions.act_window">
        <field name="name">同意</field>
        <field name="res_model">dtdream.demand.app.agree.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</openerp>