<openerp>
  <data>

    <record id="act_dtdream_hr_business" model="ir.actions.act_window">
        <field name="name">我的申请</field>
        <field name="res_model">dtdream_hr_business.dtdream_hr_business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">['|',('name.user_id', '=', uid),('create_uid','=',uid)]</field>
    </record>

    <record id="act_dtdream_hr_business_wait" model="ir.actions.act_window">
        <field name="name">待审批</field>
        <field name="res_model">dtdream_hr_business.dtdream_hr_business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('current_approver.user_id','=',uid),('state','not in',('5','99'))]</field>
    </record>

    <record id="act_dtdream_hr_business_deal" model="ir.actions.act_window">
        <field name="name">已审批</field>
        <field name="res_model">dtdream_hr_business.dtdream_hr_business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('his_app','=',uid)]</field>
    </record>

    <record id="act_dtdream_hr_business_report" model="ir.actions.act_window">
        <field name="name">报告</field>
        <field name="res_model">dtdream_hr_business.dtdream_hr_business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

     <record model="ir.ui.view" id="business_tree">
          <field name="name">business_tree</field>
          <field name="model">dtdream_hr_business.dtdream_hr_business</field>
          <field name="arch" type="xml">
            <tree>
               <field name="name"/>
               <field name="job_number"/>
              <field name="department"/>
              <field name="create_time"/>
              <field name="state"/>
            </tree>
         </field>
     </record>

    <!--form视图-->
    <record model="ir.ui.view" id="business_form">
      <field name="name">business_form</field>
      <field name="model">dtdream_hr_business.dtdream_hr_business</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="btn_submit" type="workflow" string="提交" class="oe_highlight" attrs="{'invisible':['|',('state','not in',('-1')),'&amp;',('is_create','=',False),('is_shenqingren','=',False)]}"></button>
            <button name="btn_restart" type="workflow" string="重启流程" class="oe_highlight" attrs="{'invisible':['|',('is_shenqingren','=',False),('state','not in',('99'))]}"></button>
            <button name="btn_next" type="workflow"  string="批准" class="oe_highlight" attrs="{'invisible':['|',('is_shenpiren','=',False),('state','not in',('0','1','2','3','4'))]}"></button>
            <button name="%(dtdream_hr_business.act_hr_business_wizard)d" type="action" string="驳回" class="oe_highlight" attrs="{'invisible':['|',('is_shenpiren','=',False),('state','not in',('0','1','2','3','4'))]}"></button>
            <field name="state" statusbar_visible="-1,0,5" widget="statusbar"></field>
          </header>
          <sheet>
            <group>
              <group string="基本信息">
                <field name="name" attrs="{'readonly':['|',('is_shenqingren','=',False),('state','not in',('-1'))]}"/>
                <field name="job_number"/>
                <field name="department"/>
                <field name="create_time"/>
                <field name="is_shenpiren" invisible="1"/>
                <field name="is_shenqingren" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_create" invisible="1"/>
              </group>
              <group string="节点设定">
                <field name="approver_fir" placeholder="自动获取部门行政助理，如有异常请联系HR" attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenpiren','=',False),('state','in',('0','1','2','3','4','5','99')),'|',('is_create','=',False),('state','not in',('-1'))]}"/>
                <field name="approver_sec" attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenpiren','=',False),('state','in',('1','2','3','4','5','99')),'|',('is_create','=',False),('state','not in',('-1'))]}"/>
                <field name="approver_thr" attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenpiren','=',False),('state','in',('2','3','4','5','99')),'|',('is_create','=',False),('state','not in',('-1'))]}"/>
                <field name="approver_fou" attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenpiren','=',False),('state','in',('3','4','5','99')),'|',('is_create','=',False),('state','not in',('-1'))]}"/>
                <field name="approver_fif" attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenpiren','=',False),('state','in',('4','5','99')),'|',('is_create','=',False),('state','not in',('-1'))]}"/>
              </group>
            </group>
            <group>
              <div>
                  <p>流程描述</p>
                  <p>第一审批人：部门行政助理</p>
                  <p>第二审批人：部门主管</p>
                  <p><font color="red">注：有费用(如在途费，住宿费)发生的公干，请走出差申请流程;审批人请按顺序填写</font></p>
              </div>
            </group>
            <notebook>
              <page string="明细">
                <field name="detail_ids"  attrs="{'readonly':['&amp;','&amp;',('is_admin','=',False),'|',('is_shenqingren','=',False),('state','not in',('-1')),'|',('is_create','=',False),('state','not in',('-1'))]}" >
                  <tree editable="bottom">
                    <field name="place"/>
                    <field name="startTime"/>
                    <field name="endTime"/>
                    <field name="reason"/>
                  </tree>
                </field>
              </page>
              </notebook>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="business_detail_form">
      <field name="name">business_detail_form</field>
      <field name="model">dtdream_hr_business.business_detail</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                  <field name="place"/>
              </group>
              <group>
                    <group>
                        <field name="startTime"/>
                    </group>
                    <group>
                        <field name="endTime"/>
                        <field name="business" invisible="1"/>
                        <field name="name" invisible="1"/>
                    </group>
              </group>
              <group>
                  <field name="reason"/>
              </group>
          </sheet>
        </form>
      </field>
    </record>

      <record id="act_dtdream_business_log" model="ir.actions.act_window">
        <field name="name">外出公干</field>
        <field name="res_model">dtdream_hr_business.dtdream_hr_business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('name.id','=',active_id)]</field>
    </record>

    <record id="view_employee_form_business_inherit" model="ir.ui.view">
        <field name="name">hr.employee.business.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="dtdream_hr.dtdream_view_employee_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
               <button class="oe_stat_button" type="action" name="%(act_dtdream_business_log)d"
                icon="fa-strikethrough" attrs="{'invisible':[('can_view_business','=',False)]}">
                <field string="外出公干" name="business_log_nums" widget="statinfo"/>
               </button>
               <field name="can_view_business" invisible="True"/>
            </button>
        </field>
    </record>


    <menuitem name="外出公干" id="dtdream_hr_business_root" icon="fa-user"
            web_icon="dtdream_hr_business,static/description/wcgg.png"></menuitem>
    <menuitem name="我的申请" sequence="10" id="dtdream_hr_business" parent="dtdream_hr_business_root" action="act_dtdream_hr_business" ></menuitem>
    <menuitem name="待我审批的申请" sequence="20" id="dtdream_hr_business_wait" parent="dtdream_hr_business_root" action="act_dtdream_hr_business_wait"></menuitem>
    <menuitem name="我已审批的申请" sequence="30" id="dtdream_hr_business_deal" parent="dtdream_hr_business_root" action="act_dtdream_hr_business_deal"></menuitem>
    <menuitem name="报告" sequence="40" id="dtdream_hr_business_report" parent="dtdream_hr_business_root"  action="act_dtdream_hr_business_report" groups="base.group_hr_manager,base.group_hr_user"></menuitem>
  </data>
</openerp>