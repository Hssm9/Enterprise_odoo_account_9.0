<openerp>
  <data>
    <record id="view_dtdream_project_role_form" model="ir.ui.view">
        <field name="name">view.dtdream.project.role.form</field>
        <field name="model">dtdream.project.role</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" readonly="True"/>
                        <field name="leader" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="leader_history" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_dtdream_project_role_setting_form" model="ir.ui.view">
        <field name="name">view.dtdream.project.role.setting.form</field>
        <field name="model">dtdream.project.role.setting</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="required"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   <record id="view_dtdream_project_role_setting_tree" model="ir.ui.view">
        <field name="name">view.dtdream.project.role.setting.tree</field>
        <field name="model">dtdream.project.role.setting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="required"/>
            </tree>
        </field>
    </record>

  </data>
</openerp>