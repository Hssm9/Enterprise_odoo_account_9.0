        <record model="ir.ui.view" id="dtdream_wage_kanban_view">
            <field name="name">dtdream.wage.kanban</field>
            <field name="model">dtdream.wage</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" >
                    <field name="job_code"/>
                    <field name="name" />
                    <field name="nick_name" />
                    <field name="yingfashouru" />
                    <field name="shifashouru" />
                    <field name="faxinyue" />
                    <field name='shuiqianshouru'/>
                    <field name='gangweijintie'/>
                    <field name='basic_wage'/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click ">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div name="tags"/>
                                        <ul>
                                            <li ><strong>姓名:</strong> <field name="name" /></li>
                                            <li ><strong>应发收入:</strong> <field name="yingfashouru" /></li>
                                            <li ><strong>实发收入:</strong> <field name="shifashouru" /></li>
                                            <li > <strong>发薪月:</strong><field name="faxinyue"/></li>
                                        </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="act_dtdream_wage" model="ir.actions.act_window">
