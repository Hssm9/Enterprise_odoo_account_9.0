        <menuitem name="工资查询系统" id="dtdream_wage_root" icon="fa-user" web_icon="dtdream_special_approval,static/description/dtdream_special_approval.png"/>
        <menuitem name="工资" id="dtdream_wage" parent="dtdream_wage_root" action="act_dtdream_wage"/>
