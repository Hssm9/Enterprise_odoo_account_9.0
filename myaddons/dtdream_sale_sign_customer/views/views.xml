<openerp>
  <data>

    <!--签单客户FORM-->
    <record model="ir.ui.view" id="dtdream_sale_sign_customer_form">
        <field name="name">dtdream.sale.sign.customer.form</field>
        <field name="model">dtdream.sale.sign.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                          <field name="customer_name"/>
                          <field name="description"/>
                        </group>
                        <group>
                          <field name="customer_code"/>
                        </group>
                    </group>
                    <field name="customer_contacts">
                        <tree>
                            <field name="contact_name"/>
                            <field name="contact_phone"/>
                            <field name="contact_email"/>
                            <field name="description"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="contact_name"/>
                                        <field name="contact_email"/>
                                    </group>
                                    <group>
                                        <field name="contact_phone"/>
                                        <field name="description"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>

                </sheet>
            </form>
        </field>
    </record>

    <!--签单客户TREE-->
    <record model="ir.ui.view" id="dtdream_sale_sign_customer_tree">
        <field name="name">dtdream.sale.sign.customer.tree</field>
        <field name="model">dtdream.sale.sign.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_name"/>
                <field name="customer_code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

  </data>
</openerp>