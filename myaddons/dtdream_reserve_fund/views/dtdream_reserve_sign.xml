<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="dtdream_reserve_fund_sign_form">
            <field name="name">dtdream.reserve.fund.sign.form</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="code" readonly="1"/>
                                <field name="parent_id" readonly="1"/>
                                <field name="manager_id" readonly="1"/>
                                <field name="assitant_id" widget="many2many_tags" readonly="1"/>
                            </group>
                            <group>
                                <field name="reserve_first_signer">
                                    <tree editable="bottom">
                                        <field name="name"></field>
                                        <field name="type"></field>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="name"></field>
                                                <field name="type"></field>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                                <field name="reserve_first_amount"></field>
                                <field name="reserve_second_signer">
                                    <tree editable="bottom">
                                        <field name="name"></field>
                                        <field name="type"></field>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="name"></field>
                                                <field name="type"></field>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                                <field name="reserve_second_amount"></field>
                                <field name="interface_account"></field>
                                <field name="cashier"></field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="dtdream_reserve_fund_sign_list">
            <field name="name">dtdream.reserve.fund.sign.list</field>
            <field name="model">hr.department</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                    <field name="manager_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_open_reserve_sign">
            <field name="name">备用金权签设置</field>
            <field name="res_model">hr.department</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree,form</field>
            <field name='context'>{
                'default_tree_but_open':'备用金权签部门'}</field>
            <field name="domain">[('parent_id','=',False)]</field>
        </record>
        <record model="ir.actions.act_window" id="action_open_reserve_sign_department">
          <field name="name">部门</field>
          <field name="res_model">hr.department</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="domain">[('id','=',active_id)]</field>
        </record>
        <record id="ir_open_department_ys" model="ir.values">
            <field name='key2'>tree_but_open</field>
            <field name='model'>hr.department</field>
            <field name="name">备用金权签部门</field>
            <field eval="'ir.actions.act_window,%d'%action_open_reserve_sign_department" name='value'/>
        </record>
        <record id="action_open_sign_tree" model="ir.actions.act_window.view">
          <field eval="2" name="sequence"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="dtdream_reserve_fund_sign_list"/>
          <field name="act_window_id" ref="action_open_reserve_sign_department"/>
        </record>
        <record id="action_open_sign_form" model="ir.actions.act_window.view">
          <field eval="3" name="sequence"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="dtdream_reserve_fund_sign_form"/>
          <field name="act_window_id" ref="action_open_reserve_sign_department"/>
        </record>
    </data>
</openerp>