<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record model="ir.module.category" id="module_reserve_fund_group">
            <field name="name">备用金管理</field>
            <field name="sequence">5</field>
        </record>
        <record id="group_reserve_fund_admin" model="res.groups">
            <field name="name">备用金管理员</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"></field>
            <field name="category_id" ref="module_reserve_fund_group"></field>
        </record>
        <record id="group_dtdream_reserve_interface" model="res.groups">
            <field name="name">备用金接口会计</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"></field>
            <field name="category_id" ref="module_reserve_fund_group"></field>
        </record>
        <record id="rule_dtdream_reserve_fund_employee_read" model="ir.rule">
            <field name="name">备用金员工读权限</field>
            <field name="model_id" ref="model_dtdream_reserve_fund"/>
            <field name="domain_force">['|','|',('applicant.user_id','=',user.id),('current_handler.user_id','=',user.id),('his_handler.user_id','=',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="rule_dtdream_reserve_fund_employee_write" model="ir.rule">
            <field name="name">备用金员工写权限</field>
            <field name="model_id" ref="model_dtdream_reserve_fund"/>
            <field name="domain_force">['|',('applicant.user_id','=',user.id),('current_handler.user_id','=',user.id)]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="rule_dtdream_reserve_fund_employee_unlink" model="ir.rule">
            <field name="name">备用金员工删除权限</field>
            <field name="model_id" ref="model_dtdream_reserve_fund"/>
            <field name="domain_force">[('applicant.user_id','=',user.id),('state','=','草稿')]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <record id="rule_dtdream_reserve_fund_admin_read" model="ir.rule">
            <field name="name">备用金管理员读写权限</field>
            <field name="model_id" ref="model_dtdream_reserve_fund"/>
            <field name="domain_force">[]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('group_reserve_fund_admin'))]"/>
        </record>
    </data>
</openerp>