<openerp>
  <data>
    <!--项目申请授权
    access_dtdream_project_bid_authorize_apply_apply,dtdream_project_bid_authorize_apply.dtdream_project_bid_authorize_apply,model_dtdream_project_bid_authorize_apply,dtdream_sale.group_dtdream_sale_rep,1,1,1,0
    -->
    <record model="ir.ui.view" id="dtdream_project_bid_authorize_apply_form">
      <field name="name">dtdream.project.bid.authorize.apply.form</field>
      <field name="model">dtdream.project.bid.authorize.apply</field>
      <field name="arch" type="xml">
        <form string="项目授权">
            <header class="no_hidden">
                <button name="%(btn_confirm)d" string="审核" type="action" class="oe_highlight"
                        attrs="{'invisible':['|',('state','!=','2'),('present_shenpiren','=',False)]}"/>
                <button name="btn_apply" string="提交" type="workflow" class="oe_highlight"
                        attrs="{'invisible':['|',('state','!=','0'),'|',('state','!=','0'),('present_shenpiren','=',False)]}"/>
                <button name="btn_approve" string="shenpi" type="workflow" class="oe_highlight"
                       invisible="1"/>
                <button name="%(btn_config)d" string="配置审批人" type="action" class="oe_highlight"
                       attrs="{'invisible':['|',('state','!=','6'),('present_shenpiren','=',False)]}"/>
                <button name="%(btn_approval)d" string="审批" type="action" class="oe_highlight"
                        attrs="{'invisible':['|',('present_shenpiren','=',False),('state','in',['0','2','6','done'])]}"/>
                <button name="%(btn_reject001)d" string="驳回" type="action" class="oe_highlight"
                        attrs="{'invisible':['|',('state','in',['0']),('present_shenpiren','=',False)]}"/>
                <!--<field name="shouquan_export_button" string="导出项目授权函" readonly="1" class="dtdream_shouquan_export"/>
                <field name="shouhou_export_button" string="导出售后服务承诺函" readonly="1" class="dtdream_shouhou_export"/>-->
                <field name="state"  widget="statusbar"  statusbar_visible="0,1,2,6,5,3,4,done"/>
            </header>
          <sheet>
            <group>
              <group>
                <field name="is_fuwufawu_shenpi" invisible="1"/>
                <field name="system_shenpi_state" invisible="1"/>
                <field name="office_shenpi_state" invisible="1"/>
                <field name="history_shenpirens" invisible="1"/>
                <field name="present_shenpiren" invisible="1"/>
                <field name="rep_pro_name" domain="[('has_draft_authorization','=',False),('sale_apply_id.user_id.id','=',uid)]"  attrs="{'readonly': [('state','!=', '0')]}"/>
                <field name="bidding_number" attrs="{'readonly': [('state','!=', '0')]}"/>
                <field name="bidding_rep_pro_name" attrs="{'readonly': [('state','!=', '0')]}"/>
                <field name="bidding_company" attrs="{'readonly': [('state','!=', '0')]}"/>
                <field name="bidding_time" attrs="{'readonly': [('state','!=', '0')]}"/>
                <field name="yearnum" attrs="{'readonly':[('state','!=','0')]}"/>
              </group>
              <group>
                <field name="is_current" invisible="1"></field>
                <field name="project_number" readonly="1"/>
                <field name="office_id" readonly="1"/>
                <field name="system_department_id" readonly="1"/>
                <field name="business_advanced_report" readonly="1"/>
                <field name="sale_apply_id" readonly="1"/>
              </group>
                <field name="authorization" attrs="{'readonly': [('state','!=', '0')]}">
                    <tree editable="bottom">
                        <field name="content" string=" " placeholder="请填写完整的授权渠道名称"></field>
                        <!--<button  string="导出项目授权函" class="dtdream_shouquan_export"/>-->
                    </tree>
                    <form>
                        <sheet>
                            <group>
                                <field name="content" placeholder="请填写完整的授权渠道名称"></field>
                            </group>
                        </sheet>
                    </form>
                </field>

              <field name="attachment_ids" create="false" options="{'no_create':True}" required="True" >
                  <tree class="contract_attachment" >
                      <field name="attachment_name" invisible="1"></field>
                      <field name="attachment" widget="binary" filename="attachment_name"></field>
                      <field name="attachment_upper" readonly="1"></field>
                      <field name="attachment_remark"></field>
                  </tree>
                  <form >
                    <sheet>
                      <group>
                          <field name="attachment" widget="binary" filename="attachment_name" class="remarkWidth"></field>
                          <field name="attachment_name" invisible="1"></field>
                          <field name="attachment_upper" readonly="1"></field>
                          <field name="attachment_remark"/>
                      </group>
                    </sheet>
                  </form>
                </field>

                 <div class="o_group_col_12" style="font-family:微软雅黑, 'Microsoft Yahei', 'Hiragino Sans GB', tahoma, arial, 宋体, sans-serif;">
                        <p >说明</p>
                        <p>1、若有标书电子件等招标材料请上传。</p>
                        <p>2、服务承诺函若为非标版本（非公司的标准版本），请将非标版本上传附件</p>
                  </div>
            </group>
               <notebook>
                    <page string="历史审批记录">
                        <field name="shenpi_text" readonly="True">
                          <tree string="历史审批记录">
                              <field name="state"/>
                              <field name="res"/>
                              <field name="content"/>
                              <field name="shenpiren"/>
                              <field name="create_date" string="审批时间"/>
                          </tree>

                        </field>
                    </page>
                </notebook>
          </sheet>
            <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

