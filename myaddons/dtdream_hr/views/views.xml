                                        <!--<field name="post"/>-->
                                       <!-- <field name="education"/>-->
                                        <!--<field name="entry_day"/>
                                        <field name="Inaugural_state"/>-->
                                        <field name="parent_id" invisible="1"/>
                                        <field name="coach_id" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="个人信息" groups="base.group_hr_user">
                                <group>
                                    <group>
                                        <field name="duties"/>
                                        <field name="post"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="home_address"/>
                                        <field name="entry_day"/>
                                        <field name="Inaugural_state"/>
                                    </group>
