<openerp>
  <data>
    <record id="view_users_form_inher" model="ir.ui.view">
      <field name="name">view.users.form.inher</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"></field>
      <field name="arch" type="xml">
        <xpath expr='//page[@name="access_rights"]' position="after">
          <page string="登录状态">
            <group>
              <group>
                <field name="fail_times" readonly="1"></field>
              </group>
              <group>
                <field name="is_locked"></field>

              </group>
              <group>
                <button name="btn_unlocked"  string="解除锁定" type="object"></button>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</openerp>