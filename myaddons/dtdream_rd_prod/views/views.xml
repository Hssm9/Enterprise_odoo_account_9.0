                <form>
                    <header>
                        <button name="execptiontj" string="提交例外" confirm="确认提交例外？" type="object" attrs="{'invisible':['|','|',('flag','=',False),('state','not in',('dsp')),'&amp;',('is_Qa','=',False),('is_create','=',False)]}" />
