                    <sheet>
                        <group>
                        <div><p><font color="red">注：第一审批人QA，第二审批人PL-CCB</font></p></div>
                        </group>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly':['|',('state','not in',('dsp')),'&amp;',('is_Qa','=',False),('is_create','=',False)]}"/>
                                <field name="flag" invisible="1"/>
