<openerp>
    <data>
        <record id="act_dtdream_rd_version" model="ir.actions.act_window">
            <field name="name">所有</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|','|','|','|',('create_uid','=',uid),('current_approver_user','=',uid),('his_app_user','=',uid),('followers_user','=',uid),('sameDept','=',True)]</field>
        </record>


        <record id="act_dtdream_prod_version_wait" model="ir.actions.act_window">
            <field name="name">待我审批的</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('current_approver_user','=',uid)]</field>
        </record>



        <record id="act_dtdream_prod_version_all" model="ir.actions.act_window">
            <field name="name">所有版本</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>



        <record id="view_dtdream_rd_version_tree" model="ir.ui.view">
            <field name="name">view.dtdream.rd.version.tree</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="proName"/>
                    <field name="pro_flag" />
                    <field name="version_numb"/>
                    <field name="version_state" />
                </tree>
            </field>
        </record>

        <record id="view_dtdream_rd_version_form" model="ir.ui.view">
            <field name="name">view.dtdream.rd.version.form</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                         <button name="%(dtdream_rd_prod.act_version_wizard)d" string="提交"  type="action"  attrs="{'invisible':[('version_state','not in',('initialization','Development','pending'))]}"/>
                         <button name="do_back"  string="返回上一步"  type="object" confirm="是否确认返回上一步？" attrs="{'invisible':[('version_state','in',('initialization'))]}"/>
                         <field name="version_state" widget="statusbar" statusbar_visible="initialization,Development,pending,released" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="proName" />
                                <field name="pro_flag" />
                            </group>
                            <group>
                                <field name="version_numb" />
                                <field name="is_Qa" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page  string="版本计划">
                                <group>
                                    <field name="plan_dev_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('initialization'))]}" />
                                    <field name="plan_check_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('initialization'))]}" />
                                    <field name="plan_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('initialization'))]}" />
                                    <field name="plan_mater" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('initialization'))]}" />
                                </group>
                                <group>
                                    <notebook>
                                        <page string="审批意见">
                                            <div>
                                              <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                            </div>
                                            <field name="process_01_ids">
                                                <tree editable="bottom" create="false" delete="false">
                                                    <field name="ver_state" />
                                                    <field name="role" />
                                                    <field name="level"/>
                                                    <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <field name="is_pass" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <field name="is_risk" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <field name="is_refuse" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <field name="reason" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)],'required':[('is_refuse','=',True)]}"/>
                                                    <field name="editable" invisible="1"/>
                                                    <field name="is_Qa" invisible="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </group>
                            </page>
                            <page string="版本开发" attrs="{'invisible':['&amp;',('is_Qa','=',False),('version_state','in',('initialization'))]}">
                            <group>
                                <field name="actual_dev_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('Development'))]}"/>
                                <field name="dev_mater" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('Development'))]}"/>
                            </group>
                            <group>
                                <notebook>
                                    <page string="审批意见">
                                        <div>
                                          <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                        </div>
                                        <field name="process_02_ids">
                                            <tree editable="bottom" create="false" delete="false" >
                                                <field name="ver_state" />
                                                <field name="role" />
                                                <field name="level"/>
                                                <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_pass" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_risk" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_refuse" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="reason" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)],'required':[('is_refuse','=',True)]}"/>
                                                <field name="editable" invisible="1"/>
                                                <field name="is_Qa" invisible="1"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </group>
                        </page>
                            <page string="版本发布" attrs="{'invisible':['&amp;',('is_Qa','=',False),('version_state','in',('Development','initialization'))]}">
                            <group>
                                <group>
                                    <field name="actual_check_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('pending'))]}"/>
                                </group>
                                <group>
                                    <field name="actual_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('pending'))]}"/>
                                </group>
                            </group>
                             <group>
                                 <field name="place" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('pending'))]}"/>
                                 <field name="Material" attrs="{'readonly':['&amp;',('is_Qa','=',False),('version_state','not in',('pending'))]}"/>
                             </group>
                             <group>
                                <notebook>
                                    <page string="审批意见">
                                        <div>
                                          <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                        </div>
                                        <field name="process_03_ids">
                                            <tree editable="bottom" create="false" >
                                                <field name="ver_state" />
                                                <field name="role" />
                                                <field name="level"/>
                                                <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_pass" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_risk" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="is_refuse" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                <field name="reason" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)],'required':[('is_refuse','=',True)]}"/>
                                                <field name="editable" invisible="1"/>
                                                <field name="is_Qa" invisible="1"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </group>
                        </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    <!--版本审批人配置-->
        <record id="act_dtdream_rd_approver_ver" model="ir.actions.act_window">
            <field name="name">版本审批人配置</field>
            <field name="res_model">dtdream_rd_approver_ver</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_dtdream_rd_approver_ver_from" model="ir.ui.view">
            <field name="name">view.dtdream.rd.approver.ver.from</field>
            <field name="model">dtdream_rd_approver_ver</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name='ver_state'/>
                                <field name="is_pending" invisible="1"/>
                                <field name='level' attrs="{'readonly':[('is_pending','=',False)]}"/>
                                <field name="is_level" invisible="1"/>
                                <field name="department" attrs="{'readonly':['|',('is_pending','=',False),('is_level','=',True)]}" domain="[('parent_id','=',False),('child_ids','!=',False)]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dtdream_rd_approver_ver_tree" model="ir.ui.view">
            <field name="name">view.dtdream.rd.approver.ver.tree</field>
            <field name="model">dtdream_rd_approver_ver</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name='name'/>
                    <field name='ver_state'/>
                    <field name="is_pending" invisible="1"/>
                    <field name='level' attrs="{'readonly':[('is_pending','=',False)]}"/>
                    <field name="is_level" invisible="1"/>
                    <field name="department" attrs="{'readonly':['|',('is_pending','=',False),('is_level','=',True)]}" domain="[('parent_id','=',False),('child_ids','!=',False)]"/>
                </tree>
            </field>
        </record>

        <!--版本审批意见-->
        <record id="view_dtdream_rd_process_ver_from" model="ir.ui.view">
            <field name="name">view.dtdream.rd.process.ver.from</field>
            <field name="model">dtdream_rd_process_ver</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='ver_state'/>
                                <field name='role'/>
                                <field name='approver' attrs="{'readonly':[('editable','=',False)]}"/>
                                <field name="level"/>
                            </group>
                            <group>
                                <field name='is_pass' attrs="{'readonly':[('editable','=',False)]}"/>
                                <field name='is_refuse' attrs="{'readonly':[('editable','=',False)]}"/>
                                <field name='is_risk' attrs="{'readonly':[('editable','=',False)]}"/>
                                <field name="is_new" invisible="1"/>
                                <field name="editable" invisible="1"/>
                                <field name="approver_old" invisible="1"/>
                            </group>
                            <field name="reason" attrs="{'readonly':[('editable','=',False)],'required':[('is_refuse','=',True)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <menuitem id="menu_finance_rd_approver_ver" name="版本审批人配置" parent="menu_finance_rd_config" sequence="300"  action="act_dtdream_rd_approver_ver"/>

    </data>
</openerp>