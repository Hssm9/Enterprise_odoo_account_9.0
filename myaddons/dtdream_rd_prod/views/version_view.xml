<openerp>
    <data>
        <record id="view_rd_version_filter" model="ir.ui.view">
            <field name="name">rd.version.filter</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="version_numb"/>
                    <filter string="草稿" domain="[('version_state','=','draft')]" name='state_cg'/>
                    <filter string="计划中" domain="[('version_state','=','initialization')]" name='state_jhz'/>
                    <filter string="开发中" domain="[('version_state','=','Development')]" name='state_kfz'/>
                    <filter string="待发布" domain="[('version_state','=','pending')]" name="state_dfb"/>
                    <filter string="暂停" domain="[('version_state','=','pause')]" name="state_zt"/>
                    <filter string="中止" domain="[('version_state','=','stop')]" name="state_zz"/>
                    <filter string="已发布" domain="[('version_state','=','released')]" name="state_yfb"/>
                    <group expand="1" string="Group By">
                        <filter string="部门" context="{'group_by':'department'}" name="group_by_department_ver"/>
                        <filter string="二级部门" context="{'group_by':'department_2'}" name="group_by_department_2_ver"/>
                        <filter string="产品" context="{'group_by':'name'}" name="canpname"/>
                        <filter string="版本" context="{'group_by':'version_numb'}" name="version_numb"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_dtdream_rd_version" model="ir.actions.act_window">
            <field name="name">我相关的</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="view_rd_version_filter"/>
            <field name="context">{}</field>
            <!--<field name="context">{'search_default_group_by_department_ver':'department','search_default_group_by_department_2_ver':'department_2','search_default_group_by_canpname':'name','search_default_group_by_version_numb':'version_numb'}</field>-->
        </record>

        <record id="act_dtdream_rd_version_from_dash" model="ir.actions.act_window">
            <field name="name">我相关的</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="view_rd_version_filter"/>
        </record>

        <record id="act_dtdream_prod_version_wait" model="ir.actions.act_window">
            <field name="name">待我审批的</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('current_approver_user','=',uid)]</field>
            <field name="search_view_id" ref="view_rd_version_filter"/>
            <field name="context">{}</field>
            <!--<field name="context">{'search_default_group_by_department_ver':'department','search_default_group_by_department_2_ver':'department_2','search_default_group_by_canpname':'name','search_default_group_by_version_numb':'version_numb'}</field>-->
        </record>

        <record id="act_dtdream_prod_version_all" model="ir.actions.act_window">
            <field name="name">所有版本</field>
            <field name="res_model">dtdream_rd_version</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_rd_version_filter"/>
            <field name="context">{'search_default_group_by_department_ver':'department','search_default_group_by_department_2_ver':'department_2','search_default_group_by_canpname':'name','search_default_group_by_version_numb':'version_numb'}</field>
        </record>

        <record id="view_dtdream_rd_version_tree" model="ir.ui.view">
            <field name="name">view.dtdream.rd.version.tree</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="department"/>
                    <field name="department_2"/>
                    <field name="pro_PDT"/>
                    <field name="PDT"/>
                    <field name="YF_manager"/>
                    <field name="proName" string="产品名称"/>
                    <field name="pro_flag" />
                    <field name="version_numb"/>
                    <field name="version_state" />
                    <field name="plan_pub_time"/>
                    <field name="actual_pub_time"/>
                </tree>
            </field>
        </record>



        <record model="ir.ui.view" id="dtdream_rd_version_kanban_view">
            <field name="name">dtdream.rd.version.kanban</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" >
                    <field name="department"/>
                    <field name="department_2"/>
                    <field name="PDT"/>
                    <field name="proName" string="产品名称"/>
                    <field name="pro_flag" />
                    <field name="version_numb"/>
                    <field name="version_state" />
                    <field name="plan_pub_time"/>
                    <field name="actual_pub_time"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click ">
                             <div class="o_kanban_image">
                                  <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                              </div>
                            <div class="oe_kanban_details">
                                <div name="tags"/>
                                    <ul>
                                        <li ><strong>产品名称:</strong> <field name="proName" /></li>
                                        <li ><strong>版本标识:</strong> <field name="pro_flag" /></li>
                                        <li ><strong>版本号:</strong> <field name="version_numb" /></li>
                                        <li > <strong>PDT经理:</strong><field name="PDT" /></li>
                                        <li > <strong>状态:</strong><field name="version_state"/></li>
                                    </ul>
                            <div name="tags"/>
                            </div>
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>








        <record id="view_dtdream_rd_version_form" model="ir.ui.view">
            <field name="name">view.dtdream.rd.version.form</field>
            <field name="model">dtdream_rd_version</field>
            <field name="arch" type="xml">
                <form>
                    <header  class='no_hidden'>
                        <button name="%(dtdream_rd_prod.act_version_wizard)d" string="进入下一阶段"  type="action"  attrs="{'invisible':['|','|','|','|','|','|',('is_zhongzhitjN','=',True),('is_zantingtjN','=',True),('is_click_03','=',True),('is_click_02','=',True),('is_click_01','=',True),('version_state','not in',('draft','initialization','Development','pending')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>
                        <button name="do_back"  string="返回上一阶段"  type="object" confirm="是否确认返回上一步阶段" attrs="{'invisible':['|','|','|',('is_zhongzhitjN','=',True),('is_zantingtjN','=',True),('version_state','in',('draft','pause','stop')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>
                        <button name="do_zhongzhi_back" string="恢复中止" type="object" confirm="确认恢复中止" attrs="{'invisible':['|',('version_state','not in',('stop')),('is_Qa','=',False)]}"/>
                        <button name="%(dtdream_rd_prod.act_dtdream_exception_w)d" string="申请例外" type="action" context="{'default_name': proName,'default_version': active_id,'default_mark':False,'default_approver_fir':QA,'default_approver_sec':PL_CCB}" attrs="{'invisible':[('is_create','=',False),('is_Qa','=',False)]}"/>

                        <button name="%(dtdream_rd_prod.act_dtdream_rd_replanning_wizard)d" string="申请重计划" type="action" context="{'default_proname': proName,'default_version': active_id,'default_old_plan_time':plan_pub_time,'default_appr_PL_CCB':PL_CCB}" attrs="{'invisible':['|','|','|',('is_zhongzhitjN','=',True),('is_zantingtjN','=',True),('version_state','in',('draft','pause','stop','released')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>


                        <button name="%(dtdream_rd_prod.act_dtdream_prod_suspension_w)d" string="申请暂停" type="action" context="{'default_project': proName,'default_version': active_id,'default_appr_PL_CCB':PL_CCB}"
                        attrs="{'invisible':['|','|','|','|','|','|',('is_click_03','=',True),('is_click_02','=',True),('is_click_01','=',True),('is_zantingtjN','=',True),('is_zhongzhitjN','=',True),('version_state','in',('draft','pause','stop')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>
                        <button name="%(dtdream_rd_prod.act_dtdream_prod_suspension_restoration_w)d" string="申请恢复暂停" type="action" context="{'default_project': proName,'default_version': active_id,'default_appr_PL_CCB':PL_CCB}"
                        attrs="{'invisible':['|','|',('is_zanting_backtjN','=',True),('version_state','not in',('pause')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>

                        <button name="%(dtdream_rd_prod.act_dtdream_prod_termination_w)d" string="申请中止" type="action" context="{'default_project': proName,'default_version': active_id,'default_appr_PL_CCB':PL_CCB}"
                        attrs="{'invisible':['|','|','|','|','|','|',('is_click_03','=',True),('is_click_02','=',True),('is_click_01','=',True),('is_zantingtjN','=',True),('is_zhongzhitjN','=',True),('version_state','in',('draft','released','stop')),'&amp;',('is_create','=',False),('is_Qa','=',False)]}"/>


                        <field name="version_state" widget="statusbar" statusbar_visible="draft,initialization,Development,pending,pause,stop,released" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(act_dtdream_prod_suspension_quickly_ver)d"
                                icon="fa-strikethrough">
                                <field string="暂停" name="zanting_nums" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(act_dtdream_exception_quickly_ver)d"
                                icon="fa-strikethrough">
                                <field string="例外" name="liwai_nums" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(act_dtdream_replanning_quickly_ver)d"
                                icon="fa-strikethrough">
                                <field string="重计划" name="chongjihua_nums" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="execption_flag" invisible="1"/>
                                <field name="proName" string="产品名称" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft'))]}"/>
                                <field name="department"/>
                                <field name="pro_flag" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft'))]}"/>
                                <field name="is_create" invisible="1"/>
                                <field name="QA" invisible="1"/>
                                <field name="PL_CCB" invisible="1"/>

                            </group>
                            <group>
                                <field name="version_numb"  attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft'))]}"/>
                                <field name="is_Qa" invisible="1"/>
                                <field name="is_click_01" invisible="1"/>
                                <field name="is_click_02" invisible="1"/>
                                <field name="is_click_03" invisible="1"/>
                                <field name="department_2"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="版本发布" attrs="{'invisible':[('version_state','in',('Development','initialization','draft'))]}">
                                <group>
                                    <group>
                                        <field name="actual_check_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    </group>
                                    <group>
                                        <field name="actual_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="acceptance_results" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="ys_jy" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="ys_yz" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="ys_yb" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="ys_ts" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    </group>
                                    <group>
                                        <field name="yl_jy" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="yl_yz" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="yl_yb" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                        <field name="yl_ts" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    </group>
                                </group>
                                <group>

                                    <field name="place" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                    <field name="Material" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('pending'))]}"/>
                                </group>
                                <group>
                                    <notebook>
                                        <page string="审批意见">
                                            <div>
                                              <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                            </div>
                                            <field name="process_03_ids">
                                                <tree editable="bottom" create="false" delete="false" >
                                                    <field name="ver_state" />
                                                    <field name="role" />
                                                    <field name="level"/>
                                                    <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <button name="%(dtdream_rd_prod.act_dtdream_ver_process_wizard)d"
                                                            attrs="{'invisible':['&amp;',('is_Qa','=',False),('editable','=',False)]}" type="action" string="审批" class="oe_highlight"/>
                                                    <!--<field name="is_pass" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_risk" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_refuse" attrs="{'readonly':True}"/>-->
                                                    <field name="approve_state" attrs="{'readonly':True}"/>
                                                    <field name="reason" attrs="{'readonly':True}"/>
                                                    <field name="editable" invisible="1"/>
                                                    <field name="is_Qa" invisible="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </group>
                            </page>
                            <page string="版本开发" attrs="{'invisible':[('version_state','in',('draft','initialization'))]}">
                                <group>
                                    <field name="actual_dev_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('Development'))]}"/>
                                    <field name="dev_mater" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('Development'))]}"/>
                                </group>
                                <group>
                                    <notebook>
                                        <page string="审批意见">
                                            <div>
                                              <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                            </div>
                                            <field name="process_02_ids">
                                                <tree editable="bottom" create="false" delete="false" >
                                                    <field name="ver_state" />
                                                    <field name="role" />
                                                    <field name="level"/>
                                                    <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                     <button name="%(dtdream_rd_prod.act_dtdream_ver_process_wizard)d"
                                                            attrs="{'invisible':['&amp;',('is_Qa','=',False),('editable','=',False)]}" type="action" string="审批" class="oe_highlight"/>
                                                    <!--<field name="is_pass" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_risk" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_refuse" attrs="{'readonly':True}"/>-->
                                                    <field name="approve_state" attrs="{'readonly':True}"/>
                                                    <field name="reason" attrs="{'readonly':True}"/>
                                                    <field name="editable" invisible="1"/>
                                                    <field name="is_Qa" invisible="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </group>
                            </page>
                            <page  string="版本计划">
                                <group>
                                    <field name="plan_dev_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft','initialization'))]}" />
                                    <field name="plan_check_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft','initialization'))]}" />
                                    <field name="plan_pub_time" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft','initialization'))]}" />
                                    <field name="plan_mater" attrs="{'readonly':['&amp;',('is_Qa','=',False),'|',('is_create','=',False),('version_state','not in',('draft','initialization'))]}" />
                                </group>
                                <group>
                                    <notebook>
                                        <page string="重计划">
                                            <field name="replanning_ids" mode="tree,kanban">
                                                <tree create="false" delete="false">
                                                    <field name="old_plan_time"/>
                                                    <field name="new_plan_time"/>
                                                    <field name="shenpi_date"/>
                                                    <field name="state"/>
                                                </tree>

                                                <kanban class="o_res_partner_kanban" >
                                                    <field name="old_plan_time"/>
                                                    <field name="new_plan_time"/>
                                                    <field name="shenpi_date"/>
                                                    <field name="state"/>
                                                    <templates>
                                                        <t t-name="kanban-box">
                                                        <div class="oe_kanban_global_click ">
                                                             <div class="o_kanban_image">
                                                                  <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                                                              </div>
                                                            <div class="oe_kanban_details">
                                                                <div name="tags"/>
                                                                    <ul>
                                                                        <li ><strong>原计划发布时间:</strong> <field name="old_plan_time" /></li>
                                                                        <li > <strong>重计划发布时间:</strong><field name="new_plan_time" /></li>
                                                                        <li ><strong>审批通过时间:</strong> <field name="shenpi_date" /></li>
                                                                        <li > <strong>状态:</strong><field name="state"/></li>
                                                                    </ul>
                                                            <div name="tags"/>
                                                            </div>
                                                        </div>
                                                        </t>
                                                    </templates>
                                                </kanban>

                                            </field>
                                        </page>
                                    </notebook>
                                </group>
                                <group>
                                    <notebook>
                                        <page string="审批意见">
                                            <div>
                                              <p><font color="red">注：当修改审批人时相当于授权</font></p>
                                            </div>
                                            <field name="process_01_ids">
                                                <tree editable="bottom" create="false" delete="false">
                                                    <field name="ver_state" />
                                                    <field name="role" />
                                                    <field name="level"/>
                                                    <field name="approver" attrs="{'readonly':['&amp;',('is_Qa','=',False),('editable','=',False)]}"/>
                                                    <button name="%(dtdream_rd_prod.act_dtdream_ver_process_wizard)d"
                                                            attrs="{'invisible':['&amp;',('is_Qa','=',False),('editable','=',False)]}" type="action" string="审批" class="oe_highlight"/>
                                                    <!--<field name="is_pass" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_risk" attrs="{'readonly':True}"/>-->
                                                    <!--<field name="is_refuse" attrs="{'readonly':True}"/>-->
                                                    <field name="approve_state" attrs="{'readonly':True}"/>
                                                    <field name="reason" attrs="{'readonly':True}"/>
                                                    <field name="editable" invisible="1"/>
                                                    <field name="is_Qa" invisible="1"/>
                                                </tree>
                                            </field>
                                            <field name="is_shenpiren" invisible="1"/>
                                            <field name="is_zantingtjN" invisible="1"/>
                                            <field name="is_zanting_backtjN" invisible="1"/>
                                            <field name="is_zhongzhitjN" invisible="1"/>
                                        </page>
                                    </notebook>
                                </group>
                            </page>
                            <page name="risk" string="风险与机遇">
                                <field name="risk_ver_ids" mode="tree,kanban">
                                    <tree class="apply_dis_prod_risk">
                                        <field name="name" string="风险描述"/>
                                        <field name="chance_describe" string="机遇描述"/>
                                        <field name="avoid_measure" string="规避措施"/>
                                        <field name="risk_sort_state" string="风险类别" options="{'no_create': True}"/>
                                        <field name="plan_close_time" string="计划关闭日期"/>
                                        <field name="PDT" string="责任人" options="{'no_create': True}"/>
                                        <field name="risk_state" string="风险状态" options="{'no_create': True}"/>
                                    </tree>
                                    <kanban class="o_res_partner_kanban" >
                                        <field name="name" string="风险描述"/>
                                        <field name="chance_describe" string="机遇描述"/>
                                        <field name="avoid_measure" string="规避措施"/>
                                        <field name="risk_sort_state" string="风险类别" options="{'no_create': True}"/>
                                        <field name="plan_close_time" string="计划关闭日期"/>
                                        <field name="PDT" string="责任人" options="{'no_create': True}"/>
                                        <field name="risk_state" string="风险状态" options="{'no_create': True}"/>
                                        <templates>
