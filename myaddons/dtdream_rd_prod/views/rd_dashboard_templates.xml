<?xml version="1.0" encoding="utf-8" ?>
<templates>

    <t t-name="dtdream_rd_prod.content_event_affairs">
        <div>
            <div class="table-responsive table-div" >
                <table class="table text-center">
                    <!--<caption class="bold">待我审批流程</caption>-->
                    <thead>
                        <tr style="background:#F2F3F8;">
                            <td>部门</td>
                            <td>产品名称</td>
                            <td>版本号</td>
                            <td>PDT经理</td>
                            <td>研发经理</td>
                            <td>类型</td>
                            <td>状态</td>
                            <td>停留天数</td>
                            <td>操作</td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="affairs" t-as="affair">
                            <tr t-att-class="affair.affair_id">
                                <td><t t-esc="affair.department"/> </td>
                                <td><t t-esc="affair.appr"/> </td>
                                <td><t t-esc="affair.version"/> </td>
                                <td><t t-esc="affair.PDT"/> </td>
                                <td><t t-esc="affair.YF_manager"/> </td>
                                <td><t t-esc="affair.style"/> </td>
                                <td><t t-esc="affair.state"/> </td>
                                <td>
                                    <t t-if="affair.defer">
                                        <span class="defer">停留<t t-esc="affair.deferdays"/>天 </span>
                                    </t>
                                    <t t-if="!affair.defer">
                                        <span class="normal">新申请</span>
                                    </t>
                                </td>
                                <td><a t-att-href="affair.url">审批</a></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="pager_select">
                <button class="btn btn-default next" type="affairs" t-att-value="nextPage">&gt;</button>
                <ul class="pager_number">
                    <t t-foreach="btnPage" t-as="page">
                        <t t-if="page==currentPage">
                            <li class="clickPage active" type="affairs" t-att-data-index="page"><t t-esc="page"/></li>
                        </t>
                        <t t-if="page!=currentPage">
                            <li class="clickPage" type="affairs" t-att-data-index="page"><t t-esc="page"/></li>
                        </t>
                    </t>
                </ul>
                <button class="btn btn-default previous" type="affairs" t-att-value="previousPage">&lt;</button>
                <p>共 <t t-esc="totalNumber"/> 条</p>
            </div>
            <!--<div class="pager">
                <div class="prev-btn text-center">
                    <a class="btn btn-default previous" type="affairs" t-att-value="previousPage" >上一页</a>
                </div>
                <p>共<t t-esc="totalPage"/>页/第<t t-esc="currentPage"/>页</p>
                <div class="next-btn text-center">
                    <a class="btn btn-default next" type="affairs" t-att-value="nextPage" >下一页</a>
                </div>
            </div>-->
        </div>
    </t>

