<openerp>
    <data>
    <!--角色配置-->
        <record id="act_dtdream_rd_Rconfig" model="ir.actions.act_window">
            <field name="name">角色配置</field>
            <field name="res_model">dtdream_rd_config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_dtdream_rd_config_from" model="ir.ui.view">
            <field name="name">view.dtdream.rd.config.from</field>
            <field name="model">dtdream_rd_config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="person"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dtdream_rd_config_tree" model="ir.ui.view">
            <field name="name">view.dtdream.rd.config.tree</field>
            <field name="model">dtdream_rd_config</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name='name'/>
                    <field name="person"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="dtdream_config_kanban_view">
            <field name="name">dtdream.rd.config.kanban</field>
            <field name="model">dtdream_rd_config</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" >
                    <field name='name'/>
                    <field name="person"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click ">
                                 <div class="o_kanban_image">
                                      <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                                  </div>
                                <div class="oe_kanban_details">
                                    <div name="tags"/>
                                        <ul>
                                            <li ><strong>角色:</strong> <field name="name" /></li>
                                            <li > <strong>人员:</strong><field name="person" /></li>

                                        </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_dtdream_rd_role_from" model="ir.ui.view">
            <field name="name">view.dtdream.rd.role.from</field>
            <field name="model">dtdream_rd_role</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cof_id" />
                                <field name="role_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="person" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>