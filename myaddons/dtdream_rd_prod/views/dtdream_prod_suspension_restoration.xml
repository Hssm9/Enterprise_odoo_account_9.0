<openerp>
    <data>
        <record id="act_dtdream_prod_suspension_restoration_meun_self" model="ir.actions.act_window">
            <field name="name">我相关的</field>
            <field name="res_model">dtdream.prod.suspension.restoration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">['|','|','|','|',('create_uid','=',uid),('current_approver_user','=',uid),('role_person','=',uid),('his_app_user','=',uid),('followers_user','=',uid)]</field>
        </record>

        <record id="act_dtdream_prod_suspension_meun_rest_wait" model="ir.actions.act_window">
            <field name="name">待我审批的</field>
            <field name="res_model">dtdream.prod.suspension.restoration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('current_approver_user','=',uid)]</field>
        </record>

        <record id="act_dtdream_suspension_rest_meun" model="ir.actions.act_window">
            <field name="name">所有恢复暂停</field>
            <field name="res_model">dtdream.prod.suspension.restoration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
        </record>



        <record id="view_dtdream_prod_suspension_restoration_from" model="ir.ui.view">
            <field name="name">view.dtdream.prod.suspension.restoration.from</field>
            <field name="model">dtdream.prod.suspension.restoration</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="rest_suspensiontj" string="提交恢复暂停" confirm="确认提交恢复暂停？" type="object" attrs="{'invisible':['|',('state','not in',('cg')),'&amp;',('is_Qa','=',False),('is_create','=',False)]}"/>
                        <button name="%(dtdream_rd_prod.act_rest_suspensionwizard_agree)d"  string="同意"  type="action" attrs="{'invisible':['|',('state','not in',('spz')),'&amp;',('is_Qa','=',False),('is_shenpiren','=',False)]}"/>
                        <button name="%(dtdream_rd_prod.act_rest_suspensionwizard_disagree)d"  string="不同意"  type="action" attrs="{'invisible':['|',('state','not in',('spz')),'&amp;',('is_Qa','=',False),('is_shenpiren','=',False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="cg,spz,ysp" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="project" readonly="1"/>
                                <field name="is_create" invisible="1"/>
                                <field name="is_shenpiren" invisible="1"/>
                                <field name="is_Qa" invisible="1"/>
                                <field name="appr_PL_CCB" readonly="1"/>
                            </group>
                            <group>
                                <field name='version' domain="[('proName','=',project)]" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="reason" attrs="{'readonly':['|',('state','not in',('cg')),'&amp;',('is_Qa','=',False),('is_create','=',False)]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_dtdream_prod_suspension_restoration_tree" model="ir.ui.view">
            <field name="name">view.dtdream.prod.suspension.restoration.tree</field>
            <field name="model">dtdream.prod.suspension.restoration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='project'/>
                    <field name="version"/>
                    <field name="state"/>
                    <field name="current_approver"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="dtdream_prod_suspension_restoration_kanban_view">
            <field name="name">dtdream.prod.suspension.restoration.kanban</field>
            <field name="model">dtdream.prod.suspension.restoration</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" >
                    <field name='project'/>
                    <field name="version"/>
                    <field name="state"/>
                    <field name="current_approver"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click ">
                                 <div class="o_kanban_image">
                                      <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                                  </div>
                                <div class="oe_kanban_details">
                                    <div name="tags"/>
                                        <ul>
                                            <li ><strong>项目名称:</strong> <field name="project" /></li>
                                            <li > <strong>版本:</strong><field name="version" /></li>
                                            <li > <strong>状态:</strong><field name="state"/></li>
                                        </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="act_dtdream_prod_suspension_restoration_w" model="ir.actions.act_window">
            <field name="name">恢复暂停</field>
            <field name="res_model">dtdream.prod.suspension.restoration.w</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_dtdream_prod_suspension_restoration_w_from" model="ir.ui.view">
            <field name="name">view.dtdream.prod.suspension.restoration.w.from</field>
            <field name="model">dtdream.prod.suspension.restoration.w</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="rest_suspensiontj" string="提交恢复暂停" confirm="确认提交恢复暂停？" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="cg,spz,ysp" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="project" readonly="1"/>
                                <field name="appr_PL_CCB" readonly="1"/>
                            </group>
                            <group>
                                <field name='version' domain="[('proName','=',project)]" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="reason" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</openerp>