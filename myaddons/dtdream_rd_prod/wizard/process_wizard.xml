    <record id="view_dtdream_process_wizard_form" model="ir.ui.view">
        <field name="name">view.dtdream.process.wizard.form</field>
        <field name="model">dtdream.process.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="reason"/>
                    </group>
                </group>
                <footer class='no_hidden'>
                    <button name="btn_agree" type="object" string="通过" class="oe_highlight oe_edit_only"/>
