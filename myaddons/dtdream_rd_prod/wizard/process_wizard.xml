                    <button name="btn_reject" type="object" string="不通过" class="oe_highlight oe_edit_only"/>
                    <button special="cancel" string="取消" class="oe_edit_only"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="act_dtdream_process_wizard" model="ir.actions.act_window">
