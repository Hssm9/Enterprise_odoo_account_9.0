<?xml version="1.0"?>
<odoo>
        <record id="crm_lead_won_view_form" model="ir.ui.view">
            <field name="name">crm.lead.won.form</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="项目中标">
                    <group class="oe_title">
                        <field name="bidding_channel"/>
                        <field name="if_zhitou"/>
                        <field name="project_space" mode="tree">
                            <tree string="项目空间" delete="0" create="0" editable="bottom">
                                <field name="categ_id_parent" options="{'no_open': True}" readonly="1"/>
                                <field name="bidding_space" />
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="categ_id_parent" options="{'no_open': True}" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="bidding_space" />
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                    <footer>
                        <button name="action_won_apply" string="确定" type="object" class="btn btn-sm btn-primary"/>
                        <button string="取消" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

