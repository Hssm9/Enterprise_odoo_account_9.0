<?xml version="1.0"?>
<odoo>

    <!--现金收入FORM-->
    <record model="ir.ui.view" id="dtdream_sale_cash_income_form">
        <field name="name">dtdream.sale.cash.income.form</field>
        <field name="model">cash.income</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="现金收入(万元)"/>
                            <field name="cash_project_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

