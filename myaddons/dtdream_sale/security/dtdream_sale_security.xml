<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <!--机会点/项目管理权限控制组-->
        <record id="group_dtdream_sale_read" model="res.groups">
            <field name="name">按行业/区域授权</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <!--产品权限控制组-->
        <record model="ir.module.category" id="module_product_group">
            <field name="name">产品授权</field>
            <field name="description">产品授权</field>
            <field name="sequence">2</field>
        </record>
        <record id="group_product_query" model="res.groups">
            <field name="name">产品授权折扣查询</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="module_product_group"/>
        </record>

        <record id="group_product_manage" model="res.groups">
            <field name="name">产品管理</field>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
            <field name="category_id" ref="module_product_group"/>
        </record>

        <!--机会点/项目管理权限控制规则-->
        <record id="dtdream_sale_read_rule_read" model="ir.rule">
            <field name="name">按行业/区域授权规则:</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('office_id','in',[x.id for x in user.user_access_office]),('industry_id','in',[x.id for x in user.user_access_industry])]</field>
            <field name="groups" eval="[(4,ref('group_dtdream_sale_read'))]"/>
        </record>

        <!--销售经理产品权限控制-->
        <record id="dtdream_sale_manager_rule" model="ir.rule">
            <field name="name">销售经理产品权限控制:</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_sale_manager'))]"/>
        </record>

        <record id="crm.crm_rule_personal_lead" model="ir.rule">
            <field name="name">Personal Leads</field>
            <field ref="crm.model_crm_lead" name="model_id"/>
            <field name="domain_force">['|','|',('user_id','=',user.id),('user_id','=',False),('team_id.res_member_ids','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
        </record>
    </data>
</openerp>
