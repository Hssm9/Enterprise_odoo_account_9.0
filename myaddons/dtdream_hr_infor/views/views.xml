<openerp>
  <data>
    <record id="view_employee_form_infor_inherit" model="ir.ui.view">
        <field name="name">hr.employee.infor.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="dtdream_hr.dtdream_view_employee_form"/>
        <field name="arch" type="xml">
            <field name="mobile_phone" position="replace">
              <field name="mobile_phone" string="手机号" invisible="True"/>
            </field>
            <xpath expr="//notebook/page[2]" position="replace">
              <page string="基础信息">
                <group>
                    <group>
                      <field name="account"/>
                      <field name="gender" required="True"/>
                      <field name="duties" required="True"/>
                      <field name="post" required="True"/>
                      <field name="Inaugural_state" required="True"/>
                      <field name="entry_day" required="True"/>
                  </group>
                  <group>
                      <field name="education" required="True"/>
                      <field name="recruit"/>
                      <field name="recruit_place"/>
                      <field name="work_place"/>
                      <field name="expatriate"/>
                  </group>
                  <div>
                    <p>*<b>填写说明</b>：以上信息由人力资源部录入。如需修改，请与人力资源部联系</p>
                  </div>
                </group>
              </page>
            </xpath>

            <xpath expr="//notebook/page[2]" position="after">
              <page string="自助信息">
                <group string="个人信息" name="personal">
                    <group>
                      <field name="byname"/>
                      <field name="Birthplace"/>
                      <field name="birthday"/>
                      <field name="mobile_phone" string="手机号" required="True"/>
                      <field name="icard"/>
                      <field name="postcode"/>
                    </group>
                    <group>
                      <field name="nation"/>
                      <field name="political"/>
                      <field name="marry"/>
                      <field name="child"/>
                      <field name="home_address" required="True"/>
                      <field name="graduate"/>
                    </group>
                </group>

                <group string="家庭成员">
                  <notebook>
                      <page>
                        <field name="family">
                           <tree editable="bottom">
                              <field name="relation"/>
                              <field name="name"/>
                              <field name="company"/>
                              <field name="address"/>
                              <field name="postcode"/>
                              <field name="mail"/>
                              <field name="tel"/>
                              <field name="emergency"/>
                           </tree>
                        </field>
                      </page>
                    </notebook>
                </group>

                <group string="社保公积金">
                    <group>
                        <div style="margin-right:-15px">
                            <label for="province_hukou" string="户口所在地(省)" style="font-weight:bold"/>
                            <field name="province_hukou" class="oe_inline"  placeholder="请选择省份"/>
                            <label for="state_hukou" string="(市)" style="font-weight:bold"/>
                            <field name="state_hukou" class="oe_inline" placeholder=" 请选择市区" />

                            <label for="ahead_prov" string="原社保缴纳地(省)" style="font-weight:bold"/>
                            <field name="ahead_prov" class="oe_inline"  placeholder="请选择省份"/>
                            <label for="ahead_state" string="(市)" style="font-weight:bold"/>
                            <field name="ahead_state" class="oe_inline" placeholder=" 请选择市区"/>

                            <label for="shebao_prov" string="原公积金缴纳地(省)" style="font-weight:bold"/>
                            <field name="shebao_prov" class="oe_inline" placeholder="请选择省份"/>
                            <label for="gongjijin_state" string="(市)" style="font-weight:bold"/>
                            <field name="gongjijin_state" class="oe_inline" placeholder=" 请选择市区"/>

                            <label for="now_prov" string="申请社保缴纳地(省)" style="font-weight:bold"/>
                            <field name="now_prov" class="oe_inline"  placeholder="请选择省份"/>
                            <label for="now_state" string="(市)" style="font-weight:bold"/>
                            <field name="now_state" class="oe_inline" placeholder=" 请选择市区"/>
                        </div>
                    </group>
                    <group>
                         <field name="nature_hukou"/>
                         <field name="endtime_gongjijin"/>
                         <field name="endtime_shebao"/>
                    </group>
                </group>

                <group string="其它信息">
                    <group>
                       <field name="oil_card"/>
                    </group>
                    <group>
                       <field name="has_oil"/>
                    </group>
                </group>

                <p>*<b>填写说明</b>：以上信息修改即生效，无需HR审核。该处信息将被报销系统、社保金积金系统、微信、钉钉、油卡充值系统等多个系统引用。请谨慎填写，保证相关业务的准确性</p>
              </page>
            </xpath>
        </field>
    </record>
  </data>
</openerp>