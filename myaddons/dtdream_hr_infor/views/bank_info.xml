<openerp>
    <data>
        <!-- ====================================================视图===================================================== -->

        <!--form视图-->
        <record id="view_dtdream_hr_infor_bank_from" model="ir.ui.view">
            <field name="name">view.dtdream.hr.infor.bank.from</field>
            <field name="model">hr.employee.bank</field>
            <field name="arch" type="xml">
                <form string="修改银行信息">
                    <header>
                        <button name="btn_submit" string="提交" class="btn-primary"
                                attrs="{'invisible':['|',('state','not in','0'),('is_applicant','=',False)]}"/>
                        <button name="%(act_hr_bank_wizard_agree)d" type="action" string="通过"
                                attrs="{'invisible':['|',('is_handler','=',False),('state','not in','1')]}"/>
                        <button name="%(act_hr_bank_wizard_refuse)d" type="action" string="驳回"
                                attrs="{'invisible':['|',('is_handler','=',False),('state','not in','1')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="0,1,2" class="zx_status"/>
                    </header>
                    <sheet>
                        <group string="修改银行信息">
                            <field name="bankcardno" attrs="{'readonly':['|',('state','in',('1','2')),('is_applicant','=',False)]}" required="1"/>
                            <field name="bankaddr" attrs="{'readonly':['|',('state','in',('1','2')),('is_applicant','=',False)]}" required="1"/>
                            <field name="is_handler" invisible="1"/>
                            <field name="is_applicant" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--list视图-->
        <record id="view_dtdream_hr_infor_bank" model="ir.ui.view">
            <field name="name">view.dtdream.hr.infor.bank</field>
            <field name="model">hr.employee.bank</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="bankcardno"/>
                    <field name="bankaddr"/>
                    <field name="state"/>
                    <field name="chuna"/>
                </tree>
            </field>
        </record>

        <!-- ====================================================动作===================================================== -->
        <record model="ir.actions.act_window" id="act_dtdream_hr_bank_my">
            <field name="name">我的申请</field>
            <field name="res_model">hr.employee.bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('create_uid','=',uid),('applicant.user_id','=',uid)]</field>

        </record>
        <record model="ir.actions.act_window" id="act_dtdream_hr_bank_wait_to_approve">
            <field name="name">待我审批</field>
            <field name="res_model">hr.employee.bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('chuna.user_id','=',uid),('state','=','1')]</field>
        </record>
        <record model="ir.actions.act_window" id="act_dtdream_hr_bank_approved">
            <field name="name">我已审批</field>
            <field name="res_model">hr.employee.bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('chuna.user_id','=',uid),('state','=','2')]</field>
        </record>
        <record model="ir.actions.act_window" id="act_dtdream_hr_bank_all">
            <field name="name">所有单据</field>
            <field name="res_model">hr.employee.bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|','&amp;',('chuna.user_id','=',uid),('state','!=','0'),('applicant.user_id.id','=',uid)]</field>
        </record>

        <!-- ====================================================菜单===================================================== -->
        <menuitem name="银行信息更改" sequence="11" id="dtdream_hr_bank" parent="hr.menu_hr_root"/>
        <menuitem name="我的申请" sequence="10" id="dtdream_hr_bank_my" parent="dtdream_hr_bank"
                  action="act_dtdream_hr_bank_my"/>
        <menuitem name="待我审批" sequence="20" id="dtdream_hr_bank_approving" parent="dtdream_hr_bank"
                  action="act_dtdream_hr_bank_wait_to_approve"/>
        <menuitem name="我已审批" sequence="30" id="dtdream_hr_bank_approved" parent="dtdream_hr_bank"
                  action="act_dtdream_hr_bank_approved"/>
        <menuitem name="所有单据" sequence="40" id="dtdream_hr_bank_all" parent="dtdream_hr_bank"
                  action="act_dtdream_hr_bank_all"/>
    </data>
</openerp>
