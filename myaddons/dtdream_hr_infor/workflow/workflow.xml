<?xml version="1.0" ?>
<openerp>
    <data>

        <!--==========================modify bank info workflow==============================-->
        <record model="workflow" id="wkf_modify_bank_info">
            <field name="name">hr.wkf.bank</field>
            <field name="osv">hr.employee.bank</field>
            <field name="on_create">True</field>
        </record>

        <!--workflow activity-->
        <record id="activity_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_modify_bank_info"/>
            <field name="flow_start">True</field>
            <field name="name">草稿</field>
            <field name="kind">function</field>
            <field name="action">wkf_draft()</field>
        </record>

        <record id="activity_chuna" model="workflow.activity">
            <field name="wkf_id" ref="wkf_modify_bank_info"/>
            <field name="name">出纳</field>
            <field name="kind">function</field>
            <field name="action">wkf_chuna()</field>
        </record>

        <record id="activity_end" model="workflow.activity">
            <field name="wkf_id" ref="wkf_modify_bank_info"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_end()</field>
        </record>

        <!--workflow transition-->
        <record model="workflow.transition" id="draft2chuna">
            <field name="act_from" ref="activity_draft"/>
            <field name="act_to" ref="activity_chuna"/>
            <field name="signal">btn_submit</field>
            <field name="group_id" ref="base.group_user"/>
        </record>

        <record model="workflow.transition" id="chuna2end">
            <field name="act_from" ref="activity_chuna"/>
            <field name="act_to" ref="activity_end"/>
            <field name="signal">btn_agree</field>
            <field name="group_id" ref="base.group_user"/>
        </record>

        <record model="workflow.transition" id="chuna2draft">
            <field name="act_from" ref="activity_chuna"/>
            <field name="act_to" ref="activity_draft"/>
            <field name="signal">btn_disagree</field>
